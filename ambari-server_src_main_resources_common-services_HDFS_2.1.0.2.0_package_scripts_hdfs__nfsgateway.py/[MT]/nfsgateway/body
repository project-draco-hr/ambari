def nfsgateway(action=None, format=False):
    import params
    if (action == 'start'):
        prepare_rpcbind()
    if (action == 'configure'):
        return
    elif ((action == 'start') or (action == 'stop')):
        Directory(params.hadoop_pid_dir_prefix, mode=493, owner=params.root_user, group=params.root_group)
        service(action=action, name='nfs3', user=params.root_user, create_pid_dir=True, create_log_dir=True)
