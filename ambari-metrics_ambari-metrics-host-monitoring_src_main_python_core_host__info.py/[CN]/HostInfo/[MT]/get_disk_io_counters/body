def get_disk_io_counters(self):
    io_counters = psutil.disk_io_counters()
    return {'read_count': (io_counters.read_count if hasattr(io_counters, 'read_count') else 0), 'write_count': (io_counters.write_count if hasattr(io_counters, 'write_count') else 0), 'read_bytes': (io_counters.read_bytes if hasattr(io_counters, 'read_bytes') else 0), 'write_bytes': (io_counters.write_bytes if hasattr(io_counters, 'write_bytes') else 0), 'read_time': (io_counters.read_time if hasattr(io_counters, 'read_time') else 0), 'write_time': (io_counters.write_time if hasattr(io_counters, 'write_time') else 0), }
