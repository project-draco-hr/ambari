def ignored_host_list(service, component):
    '\n  :param service: current service\n  :param component: current component\n  :return: all hosts where specified host component is in ignored state\n  '
    try:
        with open(IGNORE_DAT_FILE) as f:
            lines = f.readlines()
    except IOError:
        return []
    result = []
    if lines:
        for l in lines:
            tokens = l.split(' ')
            if ((len(tokens) == 3) and (tokens[1].strip().upper() == service.strip().upper()) and (tokens[2].strip().upper() == component.strip().upper())):
                result.append(tokens[0])
    return result
