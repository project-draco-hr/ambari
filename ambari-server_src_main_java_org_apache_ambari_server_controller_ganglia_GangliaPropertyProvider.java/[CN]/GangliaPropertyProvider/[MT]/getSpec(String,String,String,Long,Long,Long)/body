{
  StringBuilder sb=new StringBuilder();
  sb.append("http://").append(gangliaCollectorHostName).append("/ganglia/graph.php?c=").append(gangliaCluster).append("&h=").append(host == null ? "" : host).append("&m=").append(metric);
  if (startTime != null) {
    sb.append("&cs=").append(startTime);
  }
  if (endTime != null) {
    sb.append("&ce=").append(endTime);
  }
  if (step != null) {
    sb.append("&step=").append(step);
  }
  sb.append("&json=1");
  return sb.toString();
}
