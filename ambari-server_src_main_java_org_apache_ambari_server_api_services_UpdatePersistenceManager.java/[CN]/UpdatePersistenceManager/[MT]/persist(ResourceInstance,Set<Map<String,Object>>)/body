{
  try {
    return getClusterController().updateResources(resource.getResourceDefinition().getType(),createControllerRequest(setProperties),resource.getQuery().getPredicate());
  }
 catch (  AmbariException e) {
    throw new RuntimeException("Update of resource failed: " + e,e);
  }
catch (  UnsupportedPropertyException e) {
    throw new RuntimeException("Update of resource failed: " + e,e);
  }
}
