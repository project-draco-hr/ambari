{
  if (db == null)   throw new IOException("postgres db not initialized");
  String limitClause=" ORDER BY " + field.toString() + " "+ (sortAscending ? SORT_ASC : SORT_DESC)+ " NULLS "+ (sortAscending ? "FIRST " : "LAST ")+ "OFFSET "+ offset+ (limit >= 0 ? " LIMIT " + limit : "");
  return getQualifiedPS(statement,searchClause + limitClause);
}
