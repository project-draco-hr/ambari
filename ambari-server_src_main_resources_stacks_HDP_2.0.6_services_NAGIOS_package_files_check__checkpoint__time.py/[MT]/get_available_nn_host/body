def get_available_nn_host(options):
    nn_hosts = options.host.split(' ')
    for nn_host in nn_hosts:
        try:
            urllib2.urlopen('http://{host}:{port}/jmx'.format(host=nn_host, port=options.port))
            return nn_host
        except Exception:
            pass
    print WARNING_JMX_MESSAGE
    exit(1)
