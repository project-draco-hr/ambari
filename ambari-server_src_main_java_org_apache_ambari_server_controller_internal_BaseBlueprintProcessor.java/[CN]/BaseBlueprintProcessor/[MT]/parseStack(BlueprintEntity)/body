{
  Stack stack;
  try {
    stack=new Stack(blueprint.getStack(),getManagementController());
  }
 catch (  StackAccessException e) {
    throw new IllegalArgumentException("Invalid stack information provided for cluster. " + blueprint.getStack());
  }
catch (  AmbariException e) {
    throw new SystemException("Unable to obtain stack information.",e);
  }
  return stack;
}
