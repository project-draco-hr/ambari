{
  Collection<HostGroup> matchingGroups=getHostGroupsForComponent(component,hostGroups.values());
  if (matchingGroups.size() == 1) {
    return origValue.replace("localhost",matchingGroups.iterator().next().getHostInfo().iterator().next());
  }
 else {
    throw new IllegalArgumentException("Unable to update configuration property with topology information. " + "Component '" + this.component + "' is not mapped to any host group or is mapped to multiple groups.");
  }
}
