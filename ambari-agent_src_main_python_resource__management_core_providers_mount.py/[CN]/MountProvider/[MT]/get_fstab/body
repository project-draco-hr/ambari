def get_fstab(self):
    mounts = []
    with open('/etc/fstab', 'r') as fp:
        for line in fp:
            line = line.split('#', 1)[0].strip()
            mount = re.split('\\s+', line)
            if (len(mount) == 6):
                mounts.append(dict(device=mount[0], mount_point=mount[1], fstype=mount[2], options=mount[3].split(','), dump=int(mount[4]), passno=int(mount[5])))
    return mounts
