def createTargetDir(self):
    self.host_log.write('==========================\n')
    self.host_log.write('Creating target directory...')
    params = self.shared_state
    user = params.user
    command = 'sudo mkdir -p {0} ; sudo chown -R {1} {0} ; sudo chmod 755 {3} ; sudo chmod 755 {2} ; sudo chmod 755 {0}'.format(self.TEMP_FOLDER, quote_bash_args(params.user), DEFAULT_AGENT_DATA_FOLDER, DEFAULT_AGENT_LIB_FOLDER)
    ssh = SSH(params.user, params.sshkey_file, self.host, command, params.bootdir, self.host_log)
    retcode = ssh.run()
    self.host_log.write('\n')
    return retcode
