def run(self):
    sshcommand = ['ssh', '-o', 'ConnectTimeOut=60', '-o', 'StrictHostKeyChecking=no', '-o', 'BatchMode=yes', '-tt', '-i', self.sshkey_file, ((self.user + '@') + self.host), self.command]
    if DEBUG:
        self.host_log.write(('Running ssh command ' + ' '.join(sshcommand)))
    sshstat = subprocess.Popen(sshcommand, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    log = sshstat.communicate()
    errorMsg = log[1]
    if (self.errorMessage and (sshstat.returncode != 0)):
        errorMsg = ((self.errorMessage + '\n') + errorMsg)
    log = ((('STDOUT\n' + log[0]) + '\nSTDERR\n') + errorMsg)
    self.host_log.write(log)
    self.host_log.write(((('SSH command execution finished for host ' + self.host) + ', exitcode=') + str(sshstat.returncode)))
    return sshstat.returncode
