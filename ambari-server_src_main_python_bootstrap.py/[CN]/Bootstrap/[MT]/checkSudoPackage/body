def checkSudoPackage(self):
    " Checking 'sudo' package on remote host "
    self.host_log.write('==========================\n')
    self.host_log.write("Checking 'sudo' package on remote host...")
    params = self.shared_state
    if OSCheck.is_ubuntu_family():
        command = "dpkg --get-selections|grep -e '^sudo\\s*install'"
    else:
        command = "rpm -qa | grep -e '^sudo\\-'"
    ssh = SSH(params.user, params.sshkey_file, self.host, command, params.bootdir, self.host_log, errorMessage='Error: Sudo command is not available. Please install the sudo command.')
    retcode = ssh.run()
    self.host_log.write('\n')
    return retcode
