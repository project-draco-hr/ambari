@staticmethod
def get_os_family():
    '\n    Return values:\n    redhat, debian, suse ... and others\n\n    In case cannot detect raises exception( from self.get_operating_system_type() ).\n    '
    os_family = OSCheck.get_os_type()
    if (os_family in ['redhat', 'fedora', 'centos', 'oraclelinux', 'ascendos', 'amazon', 'xenserver', 'oel', 'ovs', 'cloudlinux', 'slc', 'scientific', 'psbm', 'centos linux']):
        os_family = 'RedHat'
    elif (os_family in ['ubuntu', 'debian']):
        os_family = 'Debian'
    elif (os_family in ['sles', 'sled', 'opensuse', 'suse']):
        os_family = 'Suse'
    return os_family.lower()
