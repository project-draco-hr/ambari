def create_hdfs_directories(check):
    import params
    params.HdfsResource(params.hdfs_tmp_dir, type='directory', action='create_on_execute', owner=params.hdfs_user, mode=511, only_if=check)
    params.HdfsResource(params.smoke_hdfs_user_dir, type='directory', action='create_on_execute', owner=params.smoke_user, mode=params.smoke_hdfs_user_mode, only_if=check)
    params.HdfsResource(None, action='execute', only_if=check)
