{
  if (request.getTag() != null || (request.getHosts() != null && !request.getHosts().isEmpty()) || request.getDescription() != null || request.getServiceConfigVersionNote() != null || (request.getConfigs() != null && !request.getConfigs().isEmpty())) {
    throw new IllegalArgumentException("Request with id " + request.getId() + " seems to be a config group rename request. "+ "Renaming config group can not be combined with other "+ "operations, so hosts, configs, description, service config version note "+ "request fields should not be populated.");
  }
}
