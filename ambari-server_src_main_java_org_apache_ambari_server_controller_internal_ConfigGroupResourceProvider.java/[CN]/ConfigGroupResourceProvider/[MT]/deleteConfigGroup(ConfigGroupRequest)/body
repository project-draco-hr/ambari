{
  if (request.getId() == null) {
    throw new AmbariException("Config group id is a required field.");
  }
  Clusters clusters=getManagementController().getClusters();
  Cluster cluster;
  try {
    cluster=clusters.getCluster(request.getClusterName());
  }
 catch (  ClusterNotFoundException e) {
    throw new ParentObjectNotFoundException("Attempted to add a service to a cluster which doesn't exist",e);
  }
  cluster.deleteConfigGroup(request.getId());
}
