{
  if (db == null)   throw new IOException("db not initialized");
  String order=" ORDER BY " + field.toString() + " "+ (sortAscending ? SORT_ASC : SORT_DESC);
  String query="select * \n" + "  from ( select " + "  a.*, ROWNUM rnum \n"+ "      from (" + statement.getStatementString() + searchClause+ order+ ") a \n"+ "      where ROWNUM <= "+ (offset + limit)+ ") \n"+ "where rnum  >= "+ offset;
  try {
    return db.prepareStatement(query);
  }
 catch (  SQLException e) {
    throw new IOException(e);
  }
}
