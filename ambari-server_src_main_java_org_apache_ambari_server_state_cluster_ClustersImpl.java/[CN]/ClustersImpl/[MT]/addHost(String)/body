{
  if (hosts.containsKey(hostname)) {
    throw new AmbariException("Duplicate entry for Host" + ", hostName= " + hostname);
  }
  hosts.put(hostname,new HostImpl(hostname));
  hostClusterMap.put(hostname,new HashSet<Cluster>());
  if (LOG.isDebugEnabled()) {
    LOG.debug("Adding a host to Clusters" + ", hostname=" + hostname);
  }
}
