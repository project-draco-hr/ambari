{
  Cluster c=getCluster(clusterName);
  getHost(hostname);
  if (!hostClusterMap.containsKey(hostname)) {
    throw new HostNotFoundException(hostname);
  }
  hostClusterMap.get(hostname).add(c);
  if (LOG.isDebugEnabled()) {
    LOG.debug("Mapping a host to a cluster" + ", clusterName=" + clusterName + ", clusterId="+ c.getClusterId()+ ", hostname="+ hostname);
  }
}
