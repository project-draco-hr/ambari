def stopAgent():
    try:
        os.unlink(pidfile)
    except Exception:
        logger.warn(('Unable to remove: ' + pidfile))
        traceback.print_exc()
    tempFiles = getTempFiles()
    for tempFile in tempFiles:
        if os.path.exists(tempFile):
            try:
                os.unlink(tempFile)
            except Exception:
                traceback.print_exc()
                logger.warn(('Unable to remove: ' + tempFile))
    os._exit(0)
    pass
