def create_topology_script():
    import params
    path = params.net_topology_script_file_path
    parent_dir = os.path.dirname(path)
    if (not os.path.exists(parent_dir)):
        Directory(parent_dir, recursive=True, owner=params.hdfs_user, group=params.user_group)
    File(path, content=StaticFile('topology_script.py'), mode=493, only_if=format('test -d {net_topology_script_dir}'))
