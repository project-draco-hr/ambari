def create_topology_mapping():
    import params
    path = params.net_topology_mapping_data_file_path
    parent_dir = os.path.dirname(path)
    if (not os.path.exists(parent_dir)):
        Directory(parent_dir, create_parents=True, owner=params.hdfs_user, group=params.user_group)
    File(path, content=Template('topology_mappings.data.j2'), owner=params.hdfs_user, group=params.user_group, only_if=format('test -d {net_topology_script_dir}'))
