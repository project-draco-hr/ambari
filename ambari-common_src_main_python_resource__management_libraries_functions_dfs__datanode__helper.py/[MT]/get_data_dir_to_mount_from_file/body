def get_data_dir_to_mount_from_file(params):
    '\n  :return: Returns a dictionary by parsing the data_dir_mount_file file,\n  where the key is each DFS data dir, and the value is its last known mount point.\n  '
    data_dir_to_mount = {}
    if ((params.data_dir_mount_file is not None) and os.path.exists(str(params.data_dir_mount_file))):
        try:
            with open(str(params.data_dir_mount_file), 'r') as f:
                for line in f:
                    if (line and (len(line) > 0) and (line[0] == '#')):
                        continue
                    line = line.strip()
                    line_array = line.split(',')
                    if (line_array and (len(line_array) == 2)):
                        data_dir_to_mount[line_array[0]] = line_array[1]
        except Exception as e:
            Logger.error(('Encountered error while attempting to read DFS data dir mount mount values from file %s' % str(params.data_dir_mount_file)))
    return data_dir_to_mount
