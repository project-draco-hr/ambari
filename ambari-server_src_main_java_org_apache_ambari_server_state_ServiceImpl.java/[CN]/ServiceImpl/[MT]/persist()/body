{
  clusterGlobalLock.writeLock().lock();
  try {
    readWriteLock.writeLock().lock();
    try {
      if (!persisted) {
        persistEntities();
        refresh();
        persisted=true;
        StackId stackId=cluster.getDesiredStackVersion();
        cluster.addService(this);
        ServiceInstalledEvent event=new ServiceInstalledEvent(getClusterId(),stackId.getStackName(),stackId.getStackVersion(),getName());
        eventPublisher.publish(event);
      }
 else {
        saveIfPersisted();
      }
    }
 catch (    AmbariException e) {
      LOG.error("Adding service '{}' is failed before publishing service installed event.",getName(),e);
    }
 finally {
      readWriteLock.writeLock().unlock();
    }
  }
  finally {
    clusterGlobalLock.writeLock().unlock();
  }
}
