{
  readWriteLock.writeLock().lock();
  try {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Setting DesiredStackVersion of Service" + ", clusterName=" + cluster.getClusterName() + ", clusterId="+ cluster.getClusterId()+ ", serviceName="+ getName()+ ", oldDesiredStackVersion="+ getDesiredStackVersion()+ ", newDesiredStackVersion="+ stackVersion);
    }
    serviceDesiredStateEntity.setDesiredStackVersion(gson.toJson(stackVersion));
    saveIfPersisted();
  }
  finally {
    readWriteLock.writeLock().unlock();
  }
}
