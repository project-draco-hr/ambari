{
  PigJob job=null;
  try {
    job=getResourceManager().read(jobId);
  }
 catch (  ItemNotFound itemNotFound) {
    return Response.status(404).build();
  }
  getResourceManager().retrieveJobStatus(job);
  JSONObject object=new JSONObject();
  object.put("job",job);
  return Response.ok(object).build();
}
