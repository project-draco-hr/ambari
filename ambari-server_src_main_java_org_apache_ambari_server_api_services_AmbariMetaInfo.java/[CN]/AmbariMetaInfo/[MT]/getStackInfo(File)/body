{
  StackInfo stackInfo=new StackInfo();
  stackInfo.setName(stackVersionFolder.getParentFile().getName());
  stackInfo.setVersion(stackVersionFolder.getName());
  File stackMetainfoFile=new File(stackVersionFolder.getAbsolutePath() + File.separator + STACK_METAINFO_FILE_NAME);
  if (stackMetainfoFile.exists()) {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Reading stack version metainfo from file " + stackMetainfoFile.getAbsolutePath());
    }
    try {
      DocumentBuilderFactory dbFactory=DocumentBuilderFactory.newInstance();
      DocumentBuilder dBuilder=dbFactory.newDocumentBuilder();
      Document doc=dBuilder.parse(stackMetainfoFile);
      doc.getDocumentElement().normalize();
      NodeList stackNodes=doc.getElementsByTagName(STACK_XML_MAIN_BLOCK_NAME);
      for (int index=0; index < stackNodes.getLength(); index++) {
        Node node=stackNodes.item(index);
        if (node.getNodeType() == Node.ELEMENT_NODE) {
          Element property=(Element)node;
          stackInfo.setMinUpgradeVersion(getTagValue(STACK_XML_PROPERTY_UPGRADE,property));
          stackInfo.setActive(Boolean.parseBoolean(getTagValue(STACK_XML_PROPERTY_ACTIVE,property)));
        }
      }
    }
 catch (    Exception e) {
      e.printStackTrace();
      return null;
    }
  }
  return stackInfo;
}
