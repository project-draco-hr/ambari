def datanode(action=None):
    import params
    if (action == 'configure'):
        Directory(params.dfs_domain_socket_dir, recursive=True, mode=489, owner=params.hdfs_user, group=params.user_group)
        handle_dfs_data_dir(create_dirs, params)
    elif ((action == 'start') or (action == 'stop')):
        Directory(params.hadoop_pid_dir_prefix, mode=493, owner=params.hdfs_user, group=params.user_group)
        service(action=action, name='datanode', user=params.hdfs_user, create_pid_dir=True, create_log_dir=True)
