def remove_default_hostname(hostname):
    etc_hosts = open('/etc/hosts')
    all_resolution = etc_hosts.readlines()
    etc_hosts.close()
    etc_hosts = open('/etc/hosts', 'w')
    for line in all_resolution:
        if (hostname not in line):
            etc_hosts.write(line)
        else:
            etc_hosts.write('#')
            etc_hosts.write(line)
    etc_hosts.close()
