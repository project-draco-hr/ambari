def replace_conf(server_ip):
    f = open('/etc/ambari-agent/conf/ambari-agent.ini')
    lines = f.readlines()
    f.close()
    f = open('/etc/ambari-agent/conf/ambari-agent.ini', 'w+')
    for line in lines:
        line = line.replace('hostname=localhost', ('hostname=' + server_ip))
        f.write(line)
    f.close()
