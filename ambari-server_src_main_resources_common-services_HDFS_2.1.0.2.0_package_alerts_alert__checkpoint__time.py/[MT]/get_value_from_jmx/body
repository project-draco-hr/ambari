def get_value_from_jmx(query, jmx_property):
    response = None
    try:
        response = urllib2.urlopen(query, timeout=CONNECTION_TIMEOUT)
        data = response.read()
        data_dict = json.loads(data)
        return data_dict['beans'][0][jmx_property]
    finally:
        if (response is not None):
            try:
                response.close()
            except:
                pass
