{
  ActionMetadata actionMetadata=createNiceMock(ActionMetadata.class);
  OsFamily osFamily=createNiceMock(OsFamily.class);
  replay(actionMetadata);
  try {
    new StackManager(new File("./src/test/resources/stacks_with_cycle/"),new StackContext(null,actionMetadata,osFamily));
    fail("Expected exception due to cyclic stack");
  }
 catch (  AmbariException e) {
    assertEquals("Cycle detected while parsing stack definition",e.getMessage());
  }
  try {
    new StackManager(new File("./src/test/resources/stacks_with_cycle2/"),new StackContext(null,actionMetadata,osFamily));
    fail("Expected exception due to cyclic stack");
  }
 catch (  AmbariException e) {
    assertEquals("Cycle detected while parsing stack definition",e.getMessage());
  }
}
