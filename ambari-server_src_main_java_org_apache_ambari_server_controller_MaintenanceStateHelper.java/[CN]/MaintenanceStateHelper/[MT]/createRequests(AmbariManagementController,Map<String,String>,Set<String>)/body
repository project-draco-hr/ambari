{
  Map<String,String> params=new HashMap<String,String>();
  RequestStatusResponse response=null;
  RequestResourceFilter resourceFilter=new RequestResourceFilter(NAGIOS_SERVICE,NAGIOS_COMPONENT,null);
  for (  String clusterName : clusterNames) {
    ExecuteActionRequest actionRequest=new ExecuteActionRequest(clusterName,null,NAGIOS_ACTION_NAME,Collections.singletonList(resourceFilter),params);
    if (null == response)     response=amc.createAction(actionRequest,requestProperties);
  }
  return response;
}
