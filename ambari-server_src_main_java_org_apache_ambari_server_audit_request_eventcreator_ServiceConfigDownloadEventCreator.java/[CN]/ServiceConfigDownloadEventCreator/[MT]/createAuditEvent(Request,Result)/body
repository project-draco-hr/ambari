{
  String username=((User)SecurityContextHolder.getContext().getAuthentication().getPrincipal()).getUsername();
  return ClientConfigDownloadRequestAuditEvent.builder().withTimestamp(System.currentTimeMillis()).withRequestType(request.getRequestType()).withResultStatus(result.getStatus()).withUrl(request.getURI()).withRemoteIp(request.getRemoteAddress()).withUserName(username).withService(request.getResource().getKeyValueMap().get(Resource.Type.Service)).withComponent(request.getResource().getKeyValueMap().get(Resource.Type.Component)).build();
}
