{
  try {
    String splittedString[]=str.split("/|-|@|&|^|%|$|#|!|~|:|;|\\*|\\+");
    String newStr="(";
    int cnt=0;
    for (    String normalString : splittedString) {
      cnt++;
      if (!normalString.isEmpty()) {
        newStr+="*" + normalString + "*";
      }
      if (!normalString.isEmpty() && cnt < splittedString.length)       newStr+=" AND ";
    }
    newStr+=")";
    return newStr;
  }
 catch (  Exception e) {
    return "*" + str + "*";
  }
}
