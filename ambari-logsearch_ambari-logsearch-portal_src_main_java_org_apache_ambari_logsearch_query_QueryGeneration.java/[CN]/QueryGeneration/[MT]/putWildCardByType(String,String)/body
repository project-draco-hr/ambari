{
  String auditSuffix=PropertiesUtil.getProperty("auditlog.solr.core.logs");
  String serviceLogs=PropertiesUtil.getProperty("solr.core.logs");
  String type=ConfigUtil.schemaFieldsName.get(key + auditSuffix);
  if (type == null)   type=ConfigUtil.schemaFieldsName.get(key + serviceLogs);
  if (type == null)   return "*" + str + "*";
  if ("text_std_token_lower_case".equalsIgnoreCase(type))   return giveSplittedStringQuery(str);
  if ("key_lower_case".equalsIgnoreCase(type) || "string".equalsIgnoreCase(type))   return solrUtil.makeSolrSearchStringWithoutAsterisk(str);
  if ("ip_address".equalsIgnoreCase(type))   return str;
  return putEscapeCharacterForNumber(str);
}
