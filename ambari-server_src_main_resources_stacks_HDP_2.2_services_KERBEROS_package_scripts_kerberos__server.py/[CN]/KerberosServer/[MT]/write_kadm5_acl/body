@staticmethod
def write_kadm5_acl():
    import params
    Directory(params.kadm5_acl_dir, owner='root', recursive=True, group='root', mode=448)
    if ((params.kadm5_acl_template is None) or (not params.kadm5_acl_template.strip())):
        content = Template('kadm5_acl.j2')
    else:
        content = InlineTemplate(params.kadm5_acl_template)
    File(params.kadm5_acl_path, content=content, owner='root', group='root', mode=384)
