def slider():
    import params
    Directory(params.slider_conf_dir, recursive=True)
    XmlConfig('slider-client.xml', conf_dir=params.slider_conf_dir, configurations=params.config['configurations']['slider-client'])
    File(format('{slider_conf_dir}/slider-env.sh'), mode=493, content=Template('slider-env.sh.j2'))
    if (params.log4j_props != None):
        File(format('{params.slider_conf_dir}/log4j.properties'), mode=420, content=params.log4j_props)
    elif os.path.exists(format('{params.slider_conf_dir}/log4j.properties')):
        File(format('{params.slider_conf_dir}/log4j.properties'), mode=420)
