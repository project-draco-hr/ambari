def stopAction(self, action):
    result = {'id': action['id'], 'kind': action['kind'], 'clusterId': action['clusterId'], 'component': action['component'], 'role': action['role'], 'bluePrintName': action['bluePrintName'], 'bluePrintRevision': action['bluePrintRevision'], }
    self.sh.stopProcess(action['component'], action['role'], action['signal'])
    return result
