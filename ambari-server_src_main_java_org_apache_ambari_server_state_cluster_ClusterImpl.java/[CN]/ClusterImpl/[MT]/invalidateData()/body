{
  clusterGlobalLock.writeLock().lock();
  try {
    allConfigs=null;
    services=null;
    desiredStackVersionSet=false;
    serviceComponentHosts.clear();
    serviceComponentHostsByHost.clear();
    svcHostsLoaded=false;
    clusterConfigGroups=null;
    refresh();
    loadServices();
  }
  finally {
    clusterGlobalLock.writeLock().unlock();
  }
}
