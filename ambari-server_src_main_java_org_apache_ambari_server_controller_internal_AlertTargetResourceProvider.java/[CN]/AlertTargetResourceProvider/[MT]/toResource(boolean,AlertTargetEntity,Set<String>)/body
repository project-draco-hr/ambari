{
  Resource resource=new ResourceImpl(Resource.Type.AlertTarget);
  resource.setProperty(ALERT_TARGET_ID,entity.getTargetId());
  resource.setProperty(ALERT_TARGET_NAME,entity.getTargetName());
  setResourceProperty(resource,ALERT_TARGET_DESCRIPTION,entity.getDescription(),requestedIds);
  setResourceProperty(resource,ALERT_TARGET_NOTIFICATION_TYPE,entity.getNotificationType(),requestedIds);
  setResourceProperty(resource,ALERT_TARGET_PROPERTIES,entity.getProperties(),requestedIds);
  return resource;
}
