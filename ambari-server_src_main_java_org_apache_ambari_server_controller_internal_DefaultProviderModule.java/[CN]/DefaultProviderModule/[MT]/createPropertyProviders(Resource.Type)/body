{
  List<PropertyProvider> providers=new LinkedList<PropertyProvider>();
  if (type == Resource.Type.HostComponent) {
    providers.add(new JMXPropertyProvider(PropertyHelper.getPropertyIds(type,"JMX"),new URLStreamProvider(),hostMapping));
    providers.add(new GangliaPropertyProvider(PropertyHelper.getPropertyIds(type,"GANGLIA"),new URLStreamProvider(),gangliaCollectorHostName));
  }
  propertyProviders.put(type,providers);
}
