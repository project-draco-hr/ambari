def nagios_server_configfile(name, owner=None, group=None, config_dir=None, mode=None):
    import params
    owner = (params.nagios_user if (not owner) else owner)
    group = (params.user_group if (not group) else group)
    config_dir = (params.nagios_obj_dir if (not config_dir) else config_dir)
    TemplateConfig(format('{config_dir}/{name}'), owner=owner, group=group, mode=mode)
