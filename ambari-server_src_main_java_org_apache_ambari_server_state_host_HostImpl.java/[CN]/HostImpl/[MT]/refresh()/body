{
  writeLock.lock();
  try {
    if (isPersisted()) {
      hostEntity=hostDAO.findByName(hostEntity.getHostName());
      hostStateEntity=hostEntity.getHostStateEntity();
      hostDAO.refresh(hostEntity);
      hostStateDAO.refresh(hostStateEntity);
    }
  }
  finally {
    writeLock.unlock();
  }
}
