{
  try {
    writeLock.lock();
    stateMachine.setCurrentState(state);
    HostStateEntity hostStateEntity=getHostStateEntity();
    hostStateEntity.setCurrentState(state);
    hostStateEntity.setTimeInState(System.currentTimeMillis());
    saveIfPersisted();
  }
  finally {
    writeLock.unlock();
  }
}
