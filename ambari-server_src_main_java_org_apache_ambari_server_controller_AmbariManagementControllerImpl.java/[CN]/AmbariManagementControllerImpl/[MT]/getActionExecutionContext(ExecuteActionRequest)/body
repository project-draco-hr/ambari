{
  if (actionRequest.isCommand()) {
    return new ActionExecutionContext(actionRequest.getClusterName(),actionRequest.getCommandName(),actionRequest.getResourceFilters(),actionRequest.getParameters());
  }
 else {
    ActionDefinition actionDef=ambariMetaInfo.getActionDefinition(actionRequest.getActionName());
    if (actionDef == null) {
      throw new AmbariException("Action " + actionRequest.getActionName() + " does not exist");
    }
    return new ActionExecutionContext(actionRequest.getClusterName(),actionRequest.getActionName(),actionRequest.getResourceFilters(),actionRequest.getParameters(),actionDef.getTargetType(),actionDef.getDefaultTimeout(),actionDef.getTargetService(),actionDef.getTargetComponent());
  }
}
