{
  return new AmbariException(message + ", clusterName=" + cluster.getClusterName()+ ", clusterId="+ cluster.getClusterId()+ ", serviceName="+ s.getName()+ ", componentName="+ sc.getName()+ ", hostname="+ sch.getHostName()+ ", requestedStackId="+ request.getDesiredStackId()+ ", requestedState="+ request.getDesiredState()+ ", clusterStackId="+ cluster.getCurrentStackVersion()+ ", hostComponentCurrentStackId="+ sch.getStackVersion());
}
