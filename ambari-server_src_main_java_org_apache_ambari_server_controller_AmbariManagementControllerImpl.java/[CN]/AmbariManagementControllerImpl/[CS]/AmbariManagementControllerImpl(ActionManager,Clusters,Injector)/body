{
  this.clusters=clusters;
  this.actionManager=actionManager;
  this.injector=injector;
  injector.injectMembers(this);
  this.gson=injector.getInstance(Gson.class);
  LOG.info("Initializing the AmbariManagementControllerImpl");
  this.masterHostname=InetAddress.getLocalHost().getCanonicalHostName();
  if (configs != null) {
    this.jdkResourceUrl="http://" + masterHostname + ":"+ configs.getClientApiPort()+ JDK_RESOURCE_LOCATION;
    this.ojdbcUrl="http://" + masterHostname + ":"+ +configs.getClientApiPort()+ JDK_RESOURCE_LOCATION+ "/"+ configs.getOjdbcJarName();
    this.mysqljdbcUrl="http://" + masterHostname + ":"+ +configs.getClientApiPort()+ JDK_RESOURCE_LOCATION+ "/"+ configs.getMySQLJarName();
    this.serverDB=configs.getServerDBName();
  }
 else {
    this.jdkResourceUrl=null;
    this.ojdbcUrl=null;
    this.mysqljdbcUrl=null;
    this.serverDB=null;
  }
}
