{
  Map<String,ResourceDefinition> mapChildren=new HashMap<String,ResourceDefinition>();
  HostComponentResourceDefinition hostComponentResource=new HostComponentResourceDefinition(getId(),m_clusterId,null);
  PropertyId hostIdProperty=getClusterController().getSchema(Resource.Type.HostComponent).getKeyPropertyId(Resource.Type.Host);
  hostComponentResource.getQuery().addProperty(hostIdProperty);
  mapChildren.put(hostComponentResource.getPluralName(),hostComponentResource);
  return mapChildren;
}
