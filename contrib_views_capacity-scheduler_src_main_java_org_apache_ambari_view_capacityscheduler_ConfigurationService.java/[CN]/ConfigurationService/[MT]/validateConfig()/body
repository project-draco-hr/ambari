{
  String hostname=context.getProperties().get("ambari.server.url");
  if (hostname == null)   throw new MisconfigurationFormattedException("ambari.server.url");
  String username=context.getProperties().get("ambari.server.username");
  if (username == null)   throw new MisconfigurationFormattedException("ambari.server.username");
  String password=context.getProperties().get("ambari.server.password");
  if (password == null)   throw new MisconfigurationFormattedException("ambari.server.password");
}
