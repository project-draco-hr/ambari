{
  ClusterController clusterController=ClusterControllerHelper.getClusterController();
  Request request=PropertyHelper.getReadRequest();
  Predicate predicate=new PredicateBuilder().property(RequestResourceProvider.REQUEST_CLUSTER_NAME_PROPERTY_ID).equals(clusterName).and().property(RequestResourceProvider.REQUEST_ID_PROPERTY_ID).equals(requestId.toString()).toPredicate();
  QueryResponse response=clusterController.getResources(Resource.Type.Request,request,predicate);
  Set<Resource> resources=response.getResources();
  if (1 != resources.size()) {
    throw new SystemException(String.format("Cannot uniquely identify the request resource for %s",requestId));
  }
  return resources.iterator().next();
}
