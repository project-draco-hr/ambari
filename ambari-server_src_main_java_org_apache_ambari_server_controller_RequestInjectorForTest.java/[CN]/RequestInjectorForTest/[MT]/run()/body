{
  int counter=0;
  while (true) {
    try {
      sendAction(++counter);
      Thread.sleep(60000);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
catch (    AmbariException e) {
      e.printStackTrace();
    }
catch (    Exception e) {
      e.printStackTrace();
    }
  }
}
