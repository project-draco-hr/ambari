def main(argv=None):
    scriptDir = os.path.realpath(os.path.dirname(argv[0]))
    onlyargs = argv[1:]
    passPhrase = onlyargs[0]
    hostName = onlyargs[1]
    if is_suse():
        installPreReqSuse()
        installAgentSuse()
    else:
        installPreReq()
        installAgent()
    configureAgent(hostName)
    sys.exit(runAgent(passPhrase))
