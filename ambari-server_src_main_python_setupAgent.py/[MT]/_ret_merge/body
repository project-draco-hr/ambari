def _ret_merge(ret, retcode, stdout, stderr):
    ret['exitstatus'] = retcode
    temp_stdout = ret['log'][0]
    temp_stderr = ret['log'][1]
    if stdout:
        if temp_stdout:
            temp_stdout += '\n'
        temp_stdout += stdout
    if stderr:
        if temp_stderr:
            temp_stderr += '\n'
        temp_stderr += stderr
    ret['log'] = (temp_stdout, temp_stderr)
    return ret
