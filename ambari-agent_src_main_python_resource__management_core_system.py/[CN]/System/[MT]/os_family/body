@lazy_property
def os_family(self):
    '\n    Return values:\n    redhat, debian, suse\n    \n    In case cannot detect raises exception\n    '
    os_type = self.os_type
    if (os_type in ['redhat', 'centos', 'fedora', 'oraclelinux', 'ascendos', 'amazon', 'xenserver', 'oel', 'ovs', 'cloudlinux', 'slc', 'scientific', 'psbm']):
        os_family = 'redhat'
    elif (os_type in ['ubuntu', 'debian']):
        os_family = 'debian'
    elif (os_type in ['sles', 'sled', 'opensuse', 'suse']):
        os_family = 'suse'
    else:
        raise Fail('Cannot detect os family for os: {0}'.format(os_type))
    return os_family
