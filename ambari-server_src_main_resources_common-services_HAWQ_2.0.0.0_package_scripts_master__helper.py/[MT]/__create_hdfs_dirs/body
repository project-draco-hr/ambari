def __create_hdfs_dirs():
    '\n  Creates the required HDFS directories for HAWQ\n  '
    import params
    params.HdfsResource(params.hawq_hdfs_data_dir, type='directory', action='create_on_execute', owner=constants.hawq_user, group=constants.hawq_group, mode=493)
    params.HdfsResource(None, action='execute')
