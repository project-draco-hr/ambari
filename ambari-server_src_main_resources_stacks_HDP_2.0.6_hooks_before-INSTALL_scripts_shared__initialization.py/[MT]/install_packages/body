def install_packages():
    import params
    if params.host_sys_prepped:
        return
    packages = ['unzip', 'curl']
    if ((params.stack_version_formatted != '') and (compare_versions(params.stack_version_formatted, '2.2') >= 0)):
        packages.append('hdp-select')
    Package(packages, retry_on_repo_unavailability=params.agent_stack_retry_on_unavailability, retry_count=params.agent_stack_retry_count)
