def nagios_service(action='start'):
    import params
    if (action == 'start'):
        command = 'service nagios start'
    elif (action == 'stop'):
        command = format('service nagios stop && rm -f {nagios_pid_file}')
    Execute(command, path='/usr/local/bin/:/bin/:/sbin/')
    MonitorWebserver('restart')
