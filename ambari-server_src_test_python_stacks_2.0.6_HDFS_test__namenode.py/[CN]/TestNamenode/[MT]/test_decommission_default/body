def test_decommission_default(self):
    self.executeScript('2.0.6/services/HDFS/package/scripts/namenode.py', classname='NameNode', command='decommission', config_file='default.json')
    self.assertResourceCalled('File', '/etc/hadoop/conf/dfs.exclude', owner='hdfs', content=Template('exclude_hosts_list.j2'), group='hadoop')
    self.assertResourceCalled('Execute', '', user='hdfs')
    self.assertResourceCalled('ExecuteHadoop', 'dfsadmin -refreshNodes', user='hdfs', conf_dir='/etc/hadoop/conf', kinit_override=True)
    self.assertNoMoreResources()
