{
  try {
    HdfsApi api=getApi(context);
    return Response.ok(HdfsApi.fileStatusToJSON(api.getFileStatus(api.getHomeDir().toString()))).build();
  }
 catch (  WebApplicationException ex) {
    throw ex;
  }
catch (  Exception ex) {
    throw new ServiceFormattedException(ex.getMessage(),ex);
  }
}
