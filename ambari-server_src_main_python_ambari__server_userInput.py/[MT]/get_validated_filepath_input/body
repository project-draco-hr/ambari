def get_validated_filepath_input(prompt, description, default=None):
    input = False
    while (not input):
        if get_silent():
            print prompt
            return default
        else:
            input = raw_input(prompt)
            if (not (input == None)):
                input = input.strip()
            if ((not (input == None)) and (not ('' == input)) and os.path.isfile(input)):
                return input
            else:
                print description
                input = False
