def get_choice_string_input(prompt, default, firstChoice, secondChoice):
    if get_silent():
        print prompt
        return default
    input = True
    result = default
    while input:
        choice = raw_input(prompt).lower()
        if (choice in firstChoice):
            result = True
            input = False
        elif (choice in secondChoice):
            result = False
            input = False
        elif (choice is ''):
            result = default
            input = False
        else:
            print 'input not recognized, please try again: '
    return result
