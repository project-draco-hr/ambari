def test_stop_secured(self):
    self.executeScript('2.1.1/services/STORM/package/scripts/logviewer_server.py', classname='LogviewerServer', command='stop', config_file='secured.json')
    self.assertResourceCalled('Execute', 'kill `cat /var/run/storm/logviewer.pid` >/dev/null 2>&1', not_if='! (ls /var/run/storm/logviewer.pid >/dev/null 2>&1 && ps `cat /var/run/storm/logviewer.pid` >/dev/null 2>&1)')
    self.assertResourceCalled('Execute', '! (ls /var/run/storm/logviewer.pid >/dev/null 2>&1 && ps `cat /var/run/storm/logviewer.pid` >/dev/null 2>&1)', tries=5, try_sleep=3)
    self.assertResourceCalled('Execute', 'rm -f /var/run/storm/logviewer.pid')
    self.assertNoMoreResources()
