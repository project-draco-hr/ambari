def get_service_base_dir(self, stack_name, stack_version, service, component):
    '\n    Returns a base directory for service\n    '
    metadata_path = os.path.join(self.cache_dir, 'stacks', str(stack_name), str(stack_version), 'services', str(service))
    if (not os.path.isdir(metadata_path)):
        message = 'Metadata dir for not found for a service (stackName = {0}, stackVersion = {1}, service = {2}, component = {3}'.format(stack_name, stack_version, service, component)
        raise AgentException(message)
    return metadata_path
