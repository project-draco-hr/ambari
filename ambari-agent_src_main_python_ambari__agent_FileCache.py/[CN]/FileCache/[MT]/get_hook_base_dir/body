def get_hook_base_dir(self, stack_name, stack_version):
    '\n    Returns a base directory for service\n    '
    hook_base_path = os.path.join(self.cache_dir, 'stacks', str(stack_name), str(stack_version), 'hooks')
    if (not os.path.isdir(hook_base_path)):
        message = 'Hook scripts dir for not found at expected location {0}'.format(hook_base_path)
        raise AgentException(message)
    return hook_base_path
