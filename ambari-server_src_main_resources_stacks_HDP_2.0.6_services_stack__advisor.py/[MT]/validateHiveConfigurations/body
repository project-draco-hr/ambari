def validateHiveConfigurations(properties, recommendedDefaults):
    validationItems = [{'config-name': 'hive.tez.container.size', 'message': validatorLessThenDefaultValue(properties, recommendedDefaults, 'hive.tez.container.size'), }, {'config-name': 'hive.tez.java.opts', 'message': validateXmxValue(properties, recommendedDefaults, 'hive.tez.java.opts'), }, {'config-name': 'hive.auto.convert.join.noconditionaltask.size', 'message': validatorLessThenDefaultValue(properties, recommendedDefaults, 'hive.auto.convert.join.noconditionaltask.size'), }]
    return toConfigurationValidationErrors(validationItems, 'hive-site')
