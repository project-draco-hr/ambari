def validateStormConfigurations(properties, recommendedDefaults):
    validationItems = [{'config-name': 'drpc.childopts', 'message': validateXmxValue(properties, recommendedDefaults, 'drpc.childopts'), }, {'config-name': 'ui.childopts', 'message': validateXmxValue(properties, recommendedDefaults, 'ui.childopts'), }, {'config-name': 'logviewer.childopts', 'message': validateXmxValue(properties, recommendedDefaults, 'logviewer.childopts'), }]
    return toConfigurationValidationErrors(validationItems, 'storm-site')
