def getServiceConfigurationValidators(self):
    return {'HDFS': {'hdfs-site': self.validateHDFSConfigurations, 'hadoop-env': self.validateHDFSConfigurationsEnv, }, 'MAPREDUCE2': {'mapred-site': self.validateMapReduce2Configurations, }, 'YARN': {'yarn-site': self.validateYARNConfigurations, 'yarn-env': self.validateYARNEnvConfigurations, }, 'HBASE': {'hbase-env': self.validateHbaseEnvConfigurations, }, 'STORM': {'storm-site': self.validateStormConfigurations, }, 'AMBARI_METRICS': {'ams-hbase-site': self.validateAmsHbaseSiteConfigurations, 'ams-hbase-env': self.validateAmsHbaseEnvConfigurations, 'ams-site': self.validateAmsSiteConfigurations, 'ams-env': self.validateAmsEnvConfigurations, }, }
