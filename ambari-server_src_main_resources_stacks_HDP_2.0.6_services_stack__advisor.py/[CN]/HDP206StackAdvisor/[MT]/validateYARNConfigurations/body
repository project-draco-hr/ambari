def validateYARNConfigurations(self, properties, recommendedDefaults):
    validationItems = [{'config-name': 'yarn.nodemanager.resource.memory-mb', 'message': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'yarn.nodemanager.resource.memory-mb'), }, {'config-name': 'yarn.scheduler.minimum-allocation-mb', 'message': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'yarn.scheduler.minimum-allocation-mb'), }, {'config-name': 'yarn.scheduler.maximum-allocation-mb', 'message': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'yarn.scheduler.maximum-allocation-mb'), }]
    return self.toConfigurationValidationErrors(validationItems, 'yarn-site')
