def wait_for_pid(pids, timeout):
    '\n    Check pid for existence during timeout\n  '
    tstart = time.time()
    pid_live = 0
    while ((int((time.time() - tstart)) <= timeout) and (len(pids) > 0)):
        sys.stdout.write('.')
        sys.stdout.flush()
        pid_live = 0
        for item in pids:
            if pid_exists(item['pid']):
                pid_live += 1
        time.sleep(1)
    return pid_live
