def test_stop_default(self):
    self.executeScript('2.1.1/services/STORM/package/scripts/rest_api.py', classname='StormRestApi', command='stop', config_file='default.json')
    self.assertResourceCalled('Execute', 'kill `cat /var/run/storm/restapi.pid` >/dev/null 2>&1')
    self.assertResourceCalled('Execute', '! (ls /var/run/storm/restapi.pid >/dev/null 2>&1 && ps `cat /var/run/storm/restapi.pid` >/dev/null 2>&1)', tries=5, try_sleep=3)
    self.assertResourceCalled('Execute', 'rm -f /var/run/storm/restapi.pid')
