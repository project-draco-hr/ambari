def deleteStructure(action, result):
    global config
    try:
        path = ((((config.get('agent', 'prefix') + '/clusters/') + action['clusterId']) + '-') + action['role'])
        if os.path.exists(path):
            shutil.rmtree(path)
        result['exitCode'] = 0
    except Exception as err:
        result['exitCode'] = 1
        result['stderr'] = traceback.format_exc()
    return result
