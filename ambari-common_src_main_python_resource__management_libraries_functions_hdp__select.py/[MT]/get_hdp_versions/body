def get_hdp_versions(stack_root):
    '\n  Gets list of stack versions installed on the host.\n  Be default a call to hdp-select versions is made to get the list of installed stack versions.\n  As a fallback list of installed versions is collected from stack version directories in stack install root.\n  :param stack_root: Stack install root\n  :return: Returns list of installed stack versions.\n  '
    (code, out) = call('hdp-select versions')
    versions = []
    if (0 == code):
        for line in out.splitlines():
            versions.append(line.rstrip('\n'))
    if (not versions):
        versions = get_versions_from_stack_root(stack_root)
    return versions
