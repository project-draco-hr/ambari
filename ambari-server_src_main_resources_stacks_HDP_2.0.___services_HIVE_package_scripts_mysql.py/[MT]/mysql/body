def mysql():
    import params
    if (System.get_instance().platform == 'suse'):
        Directory('/var/run/mysqld/', owner=params.mysql_user, group=params.mysql_group, recursive=True)
        Link('/var/run/mysqld/mysqld.pid', to='/var/lib/mysql/mysqld.pid')
    mysql_service(action='start')
    File(params.mysql_adduser_path, mode=493, content=StaticFile('addMysqlUser.sh'))
    cmd = format('bash -x {mysql_adduser_path} {service_name} {hive_metastore_user_name} "{hive_metastore_user_passwd}" {mysql_host}')
    Execute(cmd, tries=3, try_sleep=5, path='/usr/sbin:/sbin:/usr/local/bin:/bin:/usr/bin', logoutput=True)
    mysql_service(action='stop')
