{
  TypedQuery<AlertCurrentEntity> query=m_entityManagerProvider.get().createNamedQuery("AlertCurrentEntity.removeByHostComponent",AlertCurrentEntity.class);
  query.setParameter("serviceName",serviceName);
  query.setParameter("componentName",componentName);
  query.setParameter("hostName",hostName);
  int removedItems=query.executeUpdate();
  if (m_configuration.isAlertCacheEnabled()) {
    m_currentAlertCache.invalidateAll();
  }
  m_alertEventPublisher.publish(new AggregateAlertRecalculateEvent(clusterId));
  return removedItems;
}
