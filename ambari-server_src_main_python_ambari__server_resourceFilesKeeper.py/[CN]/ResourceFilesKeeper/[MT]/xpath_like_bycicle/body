def xpath_like_bycicle(self, xml_doc, path):
    cur_elem = xml_doc
    for name in path:
        elem = self.find_xml_element_by_name(cur_elem._get_childNodes(), name)
        if name:
            cur_elem = elem
        else:
            return None
    value = cur_elem._get_childNodes()[0].nodeValue
    if value:
        return value.lower().strip()
    else:
        return None
