def getpid(self):
    sleepCount = 1
    while (self.serverpid == (-1)):
        time.sleep(1)
        logger.info(('Waiting for process %s to start' % self.cmd))
        if (sleepCount > 10):
            logger.warn(("Couldn't start process %s even after %d seconds" % (self.cmd, sleepCount)))
            os._exit(1)
    return self.serverpid
