{
  Stage s=new Stage(requestId,"/a/b","cluster1","action db accessor test","");
  s.setStageId(stageId);
  s.addHostRoleExecutionCommand(hostname,Role.valueOf(actionName),RoleCommand.ACTIONEXECUTE,new ServiceComponentHostStartEvent(Role.HBASE_MASTER.toString(),hostname,System.currentTimeMillis()),"cluster1","HBASE");
  List<Stage> stages=new ArrayList<Stage>();
  stages.add(s);
  final RequestResourceFilter resourceFilter=new RequestResourceFilter("HBASE","HBASE_MASTER",null);
  List<RequestResourceFilter> resourceFilters=new ArrayList<RequestResourceFilter>(){
{
      add(resourceFilter);
    }
  }
;
  ExecuteActionRequest executeActionRequest=new ExecuteActionRequest("cluster1",null,actionName,resourceFilters,null);
  Request request=new Request(stages,clusters);
  db.persistActions(request);
}
