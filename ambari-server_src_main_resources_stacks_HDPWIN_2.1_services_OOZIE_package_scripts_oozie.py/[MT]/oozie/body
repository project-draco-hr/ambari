def oozie():
    import params
    XmlConfig('oozie-site.xml', conf_dir=params.oozie_conf_dir, configurations=params.config['configurations']['oozie-site'], owner=params.oozie_user, mode='f')
    File(format('{oozie_conf_dir}/oozie-env.cmd'), owner=params.oozie_user, content=InlineTemplate(params.oozie_env_cmd_template))
