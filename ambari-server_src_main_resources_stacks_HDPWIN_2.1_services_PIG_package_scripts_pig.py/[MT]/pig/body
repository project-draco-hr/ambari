def pig():
    import params
    File(format('{params.pig_conf_dir}/pig.properties'), mode='f', owner=params.pig_user, content=params.pig_properties)
    if (params.log4j_props != None):
        File(format('{params.pig_conf_dir}/log4j.properties'), mode='f', owner=params.pig_user, content=params.log4j_props)
