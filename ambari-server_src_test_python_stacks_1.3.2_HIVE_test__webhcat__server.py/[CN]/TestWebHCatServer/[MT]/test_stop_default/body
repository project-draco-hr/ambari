def test_stop_default(self):
    self.executeScript('1.3.2/services/HIVE/package/scripts/webhcat_server.py', classname='WebHCatServer', command='stop', config_file='default.json')
    self.assertResourceCalled('Execute', 'env HADOOP_HOME=/usr /usr/lib/hcatalog/sbin/webhcat_server.sh stop', user='hcat')
    self.assertResourceCalled('File', '/var/run/webhcat/webhcat.pid', action=['delete'])
    self.assertNoMoreResources()

    def test_configure_secured(self):
        self.executeScript('1.3.2/services/HIVE/package/scripts/webhcat_server.py', classname='WebHCatServer', command='configure', config_file='secured.json')
        self.assert_configure_secured()
        self.assertNoMoreResources()
