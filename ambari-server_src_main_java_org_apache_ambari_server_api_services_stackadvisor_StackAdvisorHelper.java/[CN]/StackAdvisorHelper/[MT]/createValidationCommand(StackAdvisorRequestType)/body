{
  StackAdvisorCommand<ValidationResponse> command;
  if (requestType == StackAdvisorRequestType.HOST_GROUPS) {
    command=new GetComponentLayoutValidationCommand(recommendationsDir,stackAdvisorScript,requestId,saRunner);
  }
 else   if (requestType == StackAdvisorRequestType.CONFIGURATIONS) {
    command=new GetConfigurationValidationCommand(recommendationsDir,stackAdvisorScript,requestId,saRunner);
  }
 else {
    throw new StackAdvisorException(String.format("Unsupported request type, type=%s",requestType));
  }
  return command;
}
