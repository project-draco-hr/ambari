def setup_ranger_plugin_jar_symblink(stack_version, service_name, component_list):
    jar_files = os.listdir(format('/usr/hdp/{stack_version}/ranger-{service_name}-plugin/lib'))
    for jar_file in jar_files:
        for component in component_list:
            Execute(('ln', '-sf', format('/usr/hdp/{stack_version}/ranger-{service_name}-plugin/lib/{jar_file}'), format('/usr/hdp/current/{component}/lib/{jar_file}')), not_if=format('ls /usr/hdp/current/{component}/lib/{jar_file}'), only_if=format('ls /usr/hdp/{stack_version}/ranger-{service_name}-plugin/lib/{jar_file}'), sudo=True)
