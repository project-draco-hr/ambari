{
  String clusterName=Nodes.getInstance().getNode(hostname).getNodeState().getClusterName();
  if (clusterName != null) {
    int clusterRev=Clusters.getInstance().getClusterByName(clusterName).getLatestRevisionNumber();
    List<ClusterNameAndRev> l=new ArrayList<ClusterNameAndRev>();
    l.add(new ClusterNameAndRev(clusterName,clusterRev));
    return l;
  }
  return new ArrayList<ClusterNameAndRev>();
}
