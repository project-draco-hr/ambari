{
  if (action == null) {
    return;
  }
  action.setClusterId(clusterId);
  action.setClusterDefinitionRevision(clusterDefRev);
  action.setComponent(component);
  action.setRole(role);
  action.setCleanUpCommand(new Command("foobar","",new String[]{"foobar"}));
  String workDir=role.equals(component + "-client") ? (clusterId + "-client") : (clusterId + "-" + role);
  action.setWorkDirectoryComponent(workDir);
}
