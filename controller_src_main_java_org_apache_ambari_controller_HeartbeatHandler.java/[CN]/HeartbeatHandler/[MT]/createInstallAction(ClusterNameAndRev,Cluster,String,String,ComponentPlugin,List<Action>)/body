{
  String clusterId=clusterIdAndRev.getClusterName();
  long clusterRev=clusterIdAndRev.getRevision();
  Action action=new Action();
  action.setKind(Kind.CREATE_STRUCTURE_ACTION);
  action.setUser(plugin.getInstallUser());
  action.setId(getSpecialActionID(clusterIdAndRev,component,role,SpecialServiceIDs.CREATE_STRUCTURE_ACTION_ID));
  fillDetailsAndAddAction(action,allActions,clusterId,clusterRev,component,role);
  fillActionsForDependentComponents(clusterIdAndRev,cluster,component,allActions);
  action=plugin.install(cluster.getName(),role);
  fillDetailsAndAddAction(action,allActions,clusterId,clusterRev,component,role);
  action=plugin.configure(clusterId,role);
  fillDetailsAndAddAction(action,allActions,clusterId,clusterRev,component,role);
}
