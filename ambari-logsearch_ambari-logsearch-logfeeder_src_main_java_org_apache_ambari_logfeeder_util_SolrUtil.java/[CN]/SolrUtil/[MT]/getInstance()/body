{
  if (instance == null) {
synchronized (SolrUtil.class) {
      if (instance == null) {
        try {
          instance=new SolrUtil();
        }
 catch (        Exception e) {
          final String LOG_MESSAGE_KEY=SolrUtil.class.getSimpleName() + "_SOLR_UTIL";
          LogFeederUtil.logErrorMessageByInterval(LOG_MESSAGE_KEY,"Error constructing solrUtil",e,logger,Level.WARN);
        }
      }
    }
  }
  return instance;
}
