def _check_existence(self, name):
    if ('.' in name):
        name = os.path.splitext(name)[0]
    (code, out) = shell.call((CHECK_CMD % name))
    if bool(code):
        return False
    elif (('*' in name) or ('?' in name)):
        (code1, out1) = shell.call((CHECK_AVAILABLE_PACKAGES_CMD % name))
        return (not bool(code1))
    else:
        return True
