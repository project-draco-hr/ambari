def _get_configuration_value(self, key):
    '\n    Gets the value of the specified configuration key from the cache. The key\n    should be of the form {{foo-bar/baz}}. If the key is not a lookup key\n    and is instead a constant, such as "foo" or "5", then the constant is\n    returned.\n    :return:\n    '
    if (key is None):
        return None
    placeholder_keys = re.findall('{{([\\S]+)}}', key)
    if (len(placeholder_keys) == 0):
        return key
    placeholder_key = placeholder_keys[0]
    return self.cluster_configuration.get_configuration_value(self.cluster_name, placeholder_key)
