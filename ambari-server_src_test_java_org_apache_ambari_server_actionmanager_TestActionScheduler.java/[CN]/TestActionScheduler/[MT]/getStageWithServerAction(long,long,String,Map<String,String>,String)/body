{
  Stage stage=new Stage(requestId,"/tmp","cluster1",requestContext,CLUSTER_HOST_INFO);
  stage.setStageId(stageId);
  long now=System.currentTimeMillis();
  stage.addServerActionCommand(ServerAction.Command.FINALIZE_UPGRADE,Role.AMBARI_SERVER_ACTION,RoleCommand.EXECUTE,"cluster1",new ServiceComponentHostUpgradeEvent("AMBARI_SERVER_ACTION",hostName,now,"HDP-0.2"),hostName);
  ExecutionCommand execCmd=stage.getExecutionCommandWrapper(hostName,Role.AMBARI_SERVER_ACTION.toString()).getExecutionCommand();
  execCmd.setCommandParams(payload);
  return stage;
}
