{
  Stage stage=new Stage(requestId,"/tmp",clusterName,1L,"getStageWithSingleTask",CLUSTER_HOST_INFO);
  stage.setStageId(stageId);
  stage.addHostRoleExecutionCommand(hostname,role,roleCommand,new ServiceComponentHostUpgradeEvent(role.toString(),hostname,System.currentTimeMillis(),"HDP-0.2"),clusterName,service.toString());
  stage.getExecutionCommandWrapper(hostname,role.toString()).getExecutionCommand();
  stage.getOrderedHostRoleCommands().get(0).setTaskId(taskId);
  return stage;
}
