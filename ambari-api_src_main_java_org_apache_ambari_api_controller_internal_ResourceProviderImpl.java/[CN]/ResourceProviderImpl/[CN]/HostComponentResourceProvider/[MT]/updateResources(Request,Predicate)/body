{
  Map<PropertyId,Object> properties=request.getProperties().iterator().next();
  setProperties(properties,getProperties(predicate),HOST_COMPONENT_CLUSTER_NAME_PROPERTY_ID,HOST_COMPONENT_SERVICE_NAME_PROPERTY_ID,HOST_COMPONENT_COMPONENT_NAME_PROPERTY_ID,HOST_COMPONENT_HOST_NAME_PROPERTY_ID);
  ServiceComponentHostRequest hostComponentRequest=getRequest(properties);
  getManagementController().updateHostComponent(hostComponentRequest);
}
