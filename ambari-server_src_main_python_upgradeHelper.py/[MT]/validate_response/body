def validate_response(response, expect_body, http_code):
    if (((http_code is not None) and (http_code < 200)) or (http_code >= 300)):
        return (1, ('HTTP code {0}\n'.format(http_code) + response))
    if expect_body:
        if ('"href" : "' not in response):
            return (1, response)
        else:
            return (0, '')
    elif (len(response) > 0):
        return (1, response)
    else:
        return (0, '')
