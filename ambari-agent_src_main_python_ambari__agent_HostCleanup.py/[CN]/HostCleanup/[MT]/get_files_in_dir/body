def get_files_in_dir(self, dirPath):
    fileList = []
    if dirPath:
        if os.path.exists(dirPath):
            listdir = os.listdir(dirPath)
            if listdir:
                for link in listdir:
                    path = ((dirPath + os.sep) + link)
                    if ((not os.path.islink(path)) and (not os.path.isdir(path))):
                        fileList.append(path)
    return fileList
