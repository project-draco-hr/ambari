def getIsLive(self, pidPath):
    isLive = False
    pidFile = open(pidPath, 'r')
    pid = int(pidFile.readline())
    res = self.sh.run(['ps -p', str(pid), '-f'])
    lines = res['output'].strip().split(os.linesep)
    try:
        procInfo = lines[1]
        isLive = (not (procInfo == None))
    except IndexError:
        logger.info('Process is dead')
    return isLive
