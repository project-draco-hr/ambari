def set_dir_ownership(targets):
    import params
    if isinstance(targets, collections.Iterable):
        directories = targets
    else:
        directories = [targets]
    for directory in directories:
        if (len(directory) > 1):
            Execute(('chown', '-R', format('{kafka_user}:{user_group}'), directory), sudo=True)
        else:
            Logger.warning(('Permissions for the folder "%s" were not updated due to empty path passed: ' % directory))
