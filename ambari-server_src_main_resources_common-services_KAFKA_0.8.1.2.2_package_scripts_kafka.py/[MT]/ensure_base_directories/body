def ensure_base_directories():
    '\n  Make basic Kafka directories, and make sure that their ownership is correct\n  '
    import params
    base_dirs = [params.kafka_log_dir, params.kafka_pid_dir, params.conf_dir]
    Directory(base_dirs[:], mode=493, cd_access='a', owner=params.kafka_user, group=params.user_group, recursive=True)
    set_dir_ownership(base_dirs)
