def test_stop_default(self):
    self.executeScript('2.0.6/services/HBASE/package/scripts/hbase_master.py', classname='HbaseMaster', command='stop', config_file='default.json')
    self.assertResourceCalled('Execute', '/usr/lib/hbase/bin/hbase-daemon.sh --config /etc/hbase/conf stop master', on_timeout='! ( ls /var/run/hbase/hbase-hbase-master.pid >/dev/null 2>&1 && ps -p `cat /var/run/hbase/hbase-hbase-master.pid` >/dev/null 2>&1 ) || sudo -H -E kill -9 `cat /var/run/hbase/hbase-hbase-master.pid`', timeout=30, user='hbase')
    self.assertResourceCalled('Execute', 'rm -f /var/run/hbase/hbase-hbase-master.pid')
    self.assertNoMoreResources()
