def oozie_smoke_shell_file(file_name):
    import params
    File(format('/tmp/{file_name}'), content=StaticFile(file_name), mode=493)
    Execute(format('/tmp/{file_name}'), command=format('sh /tmp/{file_name} {conf_dir} {hadoop_conf_dir} {smokeuser} {security_enabled} {smokeuser_keytab} {kinit_path_local}'), tries=3, try_sleep=5, logoutput=True)
