def create_dfs_cluster_admins():
    '\n  dfs.cluster.administrators support format <comma-delimited list of usernames><space><comma-delimited list of group names>\n  '
    import params
    parts = re.split('\\s', params.dfs_cluster_administrators_group)
    if (len(parts) == 1):
        parts.append('')
    users_list = (parts[0].split(',') if parts[0] else [])
    groups_list = (parts[1].split(',') if parts[1] else [])
    if users_list:
        User(users_list, ignore_failures=params.ignore_groupsusers_create)
    if groups_list:
        Group(copy(groups_list), ignore_failures=params.ignore_groupsusers_create)
    User(params.hdfs_user, groups=(params.user_to_groups_dict[params.hdfs_user] + groups_list))
