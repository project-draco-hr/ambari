def setup_hadoop_env():
    import params
    stackversion = params.stack_version_unformatted
    if (params.has_namenode or (stackversion.find('Gluster') >= 0)):
        if params.security_enabled:
            tc_owner = 'root'
        else:
            tc_owner = params.hdfs_user
        Directory(params.hadoop_dir, mode=493)
        if (stackversion.find('Gluster') >= 0):
            Directory(params.hadoop_conf_empty_dir, recursive=True, owner='root', group=params.user_group)
        else:
            Directory(params.hadoop_conf_empty_dir, recursive=True, owner=tc_owner, group=params.user_group)
        Link(params.hadoop_conf_dir, to=params.hadoop_conf_empty_dir, not_if=format('ls {hadoop_conf_dir}'))
        File(os.path.join(params.hadoop_conf_dir, 'hadoop-env.sh'), owner=tc_owner, group=params.user_group, content=InlineTemplate(params.hadoop_env_sh_template))
