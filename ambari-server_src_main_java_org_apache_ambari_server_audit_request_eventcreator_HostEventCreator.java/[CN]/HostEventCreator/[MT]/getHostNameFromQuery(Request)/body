{
  final String key=HostResourceProvider.HOST_NAME_PROPERTY_ID;
  if (request.getURI().contains(key)) {
    Pattern pattern=Pattern.compile(".*" + key + "\\s*=\\s*([^&\\s]+).*");
    Matcher matcher=pattern.matcher(request.getURI());
    if (matcher.find()) {
      return matcher.group(1);
    }
  }
  return null;
}
