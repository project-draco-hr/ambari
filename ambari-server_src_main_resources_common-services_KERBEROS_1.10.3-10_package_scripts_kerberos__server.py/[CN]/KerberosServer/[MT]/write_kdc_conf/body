@staticmethod
def write_kdc_conf():
    import params
    Directory(params.kdc_conf_dir, owner='root', create_parents=True, group='root', mode=448)
    if ((params.kdc_conf_template is None) or (not params.kdc_conf_template.strip())):
        content = Template('kdc_conf.j2')
    else:
        content = InlineTemplate(params.kdc_conf_template)
    File(params.kdc_conf_path, content=content, owner='root', group='root', mode=384)
