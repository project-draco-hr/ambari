def yaml_config(filename, configurations=None, conf_dir=None, owner=None, group=None):
    import params
    config_content = InlineTemplate('{% for key, value in configurations_dict.items() %}{{ key }}: {{ escape_yaml_propetry(value) }}\n{% endfor %}', configurations_dict=configurations, extra_imports=[escape_yaml_propetry])
    File(os.path.join(params.conf_dir, filename), content=config_content, owner=owner, mode='f')
