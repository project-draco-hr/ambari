def _make_web_request(self, host, port, ssl):
    '\n    Makes an http(s) request to a web resource and returns the http code. If\n    there was an error making the request, return 0 for the status code.\n    '
    url = '{0}://{1}:{2}'.format(('https' if ssl else 'http'), host, str(port))
    try:
        response = urllib2.urlopen(url)
    except:
        if logger.isEnabledFor(logging.DEBUG):
            logger.exception('Unable to make a web request.')
        return 0
    return response.getcode()
