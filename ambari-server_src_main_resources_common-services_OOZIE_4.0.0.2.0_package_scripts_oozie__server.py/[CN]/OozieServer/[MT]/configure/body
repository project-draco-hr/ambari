def configure(self, env, upgrade_type=None):
    import params
    if ((upgrade_type == 'nonrolling') and (params.upgrade_direction == Direction.UPGRADE) and params.version and (compare_versions(format_hdp_stack_version(params.version), '2.2.0.0') >= 0)):
        conf_select.select(params.stack_name, 'oozie', params.version)
        hdp_select.select('oozie-client', params.version)
        hdp_select.select('oozie-server', params.version)
    env.set_params(params)
    oozie(is_server=True)
