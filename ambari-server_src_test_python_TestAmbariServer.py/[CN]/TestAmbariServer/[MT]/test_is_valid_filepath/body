def test_is_valid_filepath(self):
    temp_dir = tempfile.gettempdir()
    temp_file = tempfile.NamedTemporaryFile(mode='r')
    self.assertTrue(temp_file)
    self.assertFalse(ambari_server.is_valid_filepath(temp_dir), 'is_valid_filepath(path) should return False is path is a directory')
    self.assertFalse(ambari_server.is_valid_filepath(''))
