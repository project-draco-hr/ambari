def mahout():
    import params
    Directory(params.mahout_conf_dir, owner=params.hdfs_user, group=params.user_group)
    mahout_TemplateConfig(['mahout-env.sh'])
    File(format('{mahout_conf_dir}/mahout.properties'), mode=420, group=params.user_group, owner=params.hdfs_user, content=params.mahout_properties)
    if params.log4j_props:
        File(format('{mahout_conf_dir}/log4j.properties'), mode=420, group=params.user_group, owner=params.hdfs_user, content=params.log4j_props)
    elif os.path.exists(format('{mahout_conf_dir}/log4j.properties')):
        File(format('{mahout_conf_dir}/log4j.properties'), mode=420, group=params.user_group, owner=params.hdfs_user)
