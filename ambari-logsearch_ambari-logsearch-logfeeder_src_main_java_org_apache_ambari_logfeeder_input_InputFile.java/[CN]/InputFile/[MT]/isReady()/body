{
  if (!isReady) {
    logPathFiles=getActualFiles(logPath);
    if (logPathFiles != null && logPathFiles.length > 0 && logPathFiles[0].isFile()) {
      if (isTail() && logPathFiles.length > 1) {
        logger.warn("Found multiple files (" + logPathFiles.length + ") for the file filter "+ filePath+ ". Will use only the first one. Using "+ logPathFiles[0].getAbsolutePath());
      }
      logger.info("File filter " + filePath + " expanded to "+ logPathFiles[0].getAbsolutePath());
      isReady=true;
    }
 else {
      logger.debug(logPath + " file doesn't exist. Ignoring for now");
    }
  }
  return isReady;
}
