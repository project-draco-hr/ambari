{
  if (realm == null || realm.isEmpty()) {
    return realm;
  }
  String[] tokens=realm.split("\\.");
  StringBuilder sb=new StringBuilder();
  int len=tokens.length;
  if (len > 0) {
    sb.append("dc=").append(tokens[0]);
  }
  for (int i=1; i < len; i++) {
    sb.append(",").append("dc=").append(tokens[i]);
  }
  return sb.toString();
}
