def create(self, options, properties, dbId='Ambari'):
    '\n    # Linux implementation of the factory method. The outcome of the derived implementations\n    #  is expected to be a subclass of DBMSConfig.\n    # properties = property bag that will ultimately define the type of database. Supported types are\n    #   MySQL, Oracle and PostgreSQL.\n    # dbId = additional information, that helps distinguish between various database connections\n    #   (Ambari vs. Metrics is a prime example).\n    '
    try:
        index = options.dbms_index
    except AttributeError:
        index = options.dbms_index = self._get_default_dbms_index(options)
    desc = self.DBMS_LIST[index]
    dbmsConfig = desc.create_config(options, properties, dbId)
    return dbmsConfig
