logger = logging.getLogger()
urls = ('/package/info/(.*)', 'PackageHandler', '/package/(.*)', 'PackageHandler', '/daemon/status/(.*)', 'DaemonHandler', '/daemon/(.*)', 'DaemonHandler', '/shell/(.*)', 'ShellHandler')
app = web.application(urls, globals())
if ('HMS_PID_DIR' in os.environ):
    pidfile = (os.environ['HMS_PID_DIR'] + '/hms-agent.pid')
else:
    pidfile = '/var/run/hms/hms-agent.pid'
