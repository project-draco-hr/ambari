def __update_limits_file():
    '\n  Updates /etc/security/limits.d/hawq.conf file with the HAWQ parameters.\n  '
    Directory(constants.limits_conf_dir, recursive=True, owner=constants.root_user, group=constants.root_user)
    File('{0}/{1}.conf'.format(constants.limits_conf_dir, constants.hawq_user), content=Template('hawq.limits.conf.j2'), owner=constants.hawq_user, group=constants.hawq_group)
