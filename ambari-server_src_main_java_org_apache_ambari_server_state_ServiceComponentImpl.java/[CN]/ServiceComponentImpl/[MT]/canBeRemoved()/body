{
  if (!getDesiredState().isRemovableState()) {
    return false;
  }
  for (  ServiceComponentHost sch : hostComponents.values()) {
    if (!sch.canBeRemoved()) {
      LOG.warn("Found non removable hostcomponent when trying to" + " delete service component" + ", clusterName=" + getClusterName() + ", serviceName="+ getServiceName()+ ", componentName="+ getName()+ ", hostname="+ sch.getHostName());
      return false;
    }
  }
  return true;
}
