{
  try {
    HdfsApi api=getApi(context);
    ResponseBuilder result;
    try {
      api.copy(request.src,request.dst);
      result=Response.ok(getApi(context).fileStatusToJSON(api.getFileStatus(request.dst)));
    }
 catch (    HdfsApiException e) {
      result=Response.ok(new BoolResult(false,"Can't copy '" + request.src + "' to '"+ request.dst+ "'")).status(422);
    }
    return result.build();
  }
 catch (  WebApplicationException ex) {
    throw ex;
  }
catch (  Exception ex) {
    throw new ServiceFormattedException(ex.getMessage(),ex);
  }
}
