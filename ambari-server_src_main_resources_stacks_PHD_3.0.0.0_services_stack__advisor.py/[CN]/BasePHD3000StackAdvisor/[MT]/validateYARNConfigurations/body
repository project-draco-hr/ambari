def validateYARNConfigurations(self, properties, recommendedDefaults, configurations):
    validationItems = [{'config-name': 'yarn.nodemanager.resource.memory-mb', 'item': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'yarn.nodemanager.resource.memory-mb'), }, {'config-name': 'yarn.scheduler.minimum-allocation-mb', 'item': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'yarn.scheduler.minimum-allocation-mb'), }, {'config-name': 'yarn.scheduler.maximum-allocation-mb', 'item': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'yarn.scheduler.maximum-allocation-mb'), }]
    return self.toConfigurationValidationProblems(validationItems, 'yarn-site')
