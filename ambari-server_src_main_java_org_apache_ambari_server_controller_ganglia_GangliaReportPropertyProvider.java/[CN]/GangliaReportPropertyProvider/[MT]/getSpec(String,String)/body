{
  StringBuilder sb=new StringBuilder();
  if (configuration.isGangliaSSL()) {
    sb.append("https://");
  }
 else {
    sb.append("http://");
  }
  sb.append(hostProvider.getGangliaCollectorHostName(clusterName)).append("/ganglia/graph.php?g=").append(report).append("&json=1");
  return sb.toString();
}
