def new_cached_exec(key, file_path, kinit_path, exec_user, keytab_file, principal, hostname):
    '\n  Entry point of an actual execution - triggered when timeout on the cache expired or on fresh execution\n  '
    now = datetime.now()
    (_, temp_kinit_cache_file) = mkstemp()
    command = ("su -s /bin/bash - %s -c '%s -c %s -kt %s %s'" % (exec_user, kinit_path, temp_kinit_cache_file, keytab_file, principal.replace('_HOST', hostname)))
    try:
        Execute(command)
        with open(file_path, 'w+') as cache_file:
            result = {key: {'last_successful_execution': str(now), }, }
            json.dump(result, cache_file)
    finally:
        os.remove(temp_kinit_cache_file)
