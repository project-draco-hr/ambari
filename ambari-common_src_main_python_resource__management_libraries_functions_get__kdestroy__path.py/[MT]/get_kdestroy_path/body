def get_kdestroy_path():
    kdestroy_path = ''
    for x in ['/usr/bin', '/usr/kerberos/bin', '/usr/sbin']:
        if (not x):
            continue
        path = os.path.join(x, 'kdestroy')
        if os.path.isfile(path):
            kdestroy_path = path
            break
    return kdestroy_path
