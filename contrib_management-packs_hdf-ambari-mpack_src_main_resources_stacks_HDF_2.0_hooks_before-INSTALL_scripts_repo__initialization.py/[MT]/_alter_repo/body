def _alter_repo(action, repo_string, repo_template):
    '\n  @param action: "delete" or "create"\n  @param repo_string: e.g. "[{"baseUrl":"http://public-repo-1.hortonworks.com/HDF/centos6/2.x/updates/0.0.6.0","osType":"centos6","repoId":"HDF-2.0._","repoName":"HDF","defaultBaseUrl":"http://public-repo-1.hortonworks.com/HDF/centos6/2.x/updates/0.0.6.0"}]"\n  '
    repo_dicts = json.loads(repo_string)
    if (not isinstance(repo_dicts, list)):
        repo_dicts = [repo_dicts]
    if (0 == len(repo_dicts)):
        Logger.info('Repository list is empty. Ambari may not be managing the repositories.')
    else:
        Logger.info('Initializing {0} repositories'.format(str(len(repo_dicts))))
    for repo in repo_dicts:
        if (not ('baseUrl' in repo)):
            repo['baseUrl'] = None
        if (not ('mirrorsList' in repo)):
            repo['mirrorsList'] = None
        ubuntu_components = ([repo['repoName']] + _UBUNTU_REPO_COMPONENTS_POSTFIX)
        Repository(repo['repoId'], action=action, base_url=repo['baseUrl'], mirror_list=repo['mirrorsList'], repo_file_name=repo['repoName'], repo_template=repo_template, components=ubuntu_components)
