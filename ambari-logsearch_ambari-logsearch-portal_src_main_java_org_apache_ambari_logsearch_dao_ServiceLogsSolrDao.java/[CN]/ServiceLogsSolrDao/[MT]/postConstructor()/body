{
  logger.info("postConstructor() called.");
  String solrUrl=PropertiesUtil.getProperty("solr.url");
  String zkHosts=PropertiesUtil.getProperty("solr.zkhosts");
  String collection=PropertiesUtil.getProperty("solr.core.logs","hadoop_logs");
  String splitInterval=PropertiesUtil.getProperty("solr.service_logs.split_interval_mins","none");
  String configName=PropertiesUtil.getProperty("solr.service_logs.config_name","hadoop_logs");
  int numberOfShards=PropertiesUtil.getIntProperty("solr.service_logs.shards",1);
  int replicationFactor=PropertiesUtil.getIntProperty("solr.service_logs.replication_factor",1);
  try {
    connectToSolr(solrUrl,zkHosts,collection);
    setupCollections(splitInterval,configName,numberOfShards,replicationFactor);
  }
 catch (  Exception e) {
    logger.error("error while connecting to Solr for service logs : solrUrl=" + solrUrl + ", zkHosts="+ zkHosts+ ", collection="+ collection,e);
  }
}
