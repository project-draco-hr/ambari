def init_options_parser():
    parser = optparse.OptionParser(usage='usage: %prog action [options]')
    parser.add_option('-d', '--debug', action='store_true', dest='debug', default=False, help='Start Ambari Metrics Host Monitoring in debug mode')
    parser.add_option('-p', '--process', action='store_true', dest='is_process', default=False, help='Start Ambari Metrics Host Monitoring as a normal process, not as a service')
    return parser
