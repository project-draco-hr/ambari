def setup_hdp_install_directory():
    import params
    if ((params.hdp_stack_version != '') and (compare_versions(params.hdp_stack_version, '2.2') >= 0)):
        Execute(format('ambari-python-wrap /usr/bin/hdp-select set all `ambari-python-wrap /usr/bin/hdp-select versions | grep ^{hdp_stack_version} | tail -1`'), only_if=format('ls -d /usr/hdp/{hdp_stack_version}*'))
