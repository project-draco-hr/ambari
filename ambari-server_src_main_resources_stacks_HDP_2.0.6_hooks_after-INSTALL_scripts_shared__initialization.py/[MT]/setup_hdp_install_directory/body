def setup_hdp_install_directory():
    import params
    if params.rpm_version:
        Execute(format('ambari-python-wrap /usr/bin/hdp-select set all `ambari-python-wrap /usr/bin/hdp-select versions | grep ^{rpm_version}- | tail -1`'), not_if=format('test -d {versioned_hdp_root}'), only_if=format('ls -d /usr/hdp/{rpm_version}-*'))
