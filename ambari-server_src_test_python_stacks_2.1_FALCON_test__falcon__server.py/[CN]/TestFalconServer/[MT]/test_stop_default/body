def test_stop_default(self):
    self.executeScript('2.1/services/FALCON/package/scripts/falcon_server.py', classname='FalconServer', command='stop', config_file='default.json')
    self.assertResourceCalled('Execute', '/usr/lib/falcon/bin/falcon-stop', user='falcon')
    self.assertResourceCalled('File', '/var/run/falcon/falcon.pid', action=['delete'])
    self.assertNoMoreResources()
