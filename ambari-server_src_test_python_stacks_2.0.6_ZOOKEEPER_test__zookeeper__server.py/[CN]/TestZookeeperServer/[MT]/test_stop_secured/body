def test_stop_secured(self):
    self.executeScript('2.0.6/services/ZOOKEEPER/package/scripts/zookeeper_server.py', classname='ZookeeperServer', command='stop', config_file='secured.json')
    self.assertResourceCalled('Execute', 'source /etc/zookeeper/conf/zookeeper-env.sh ; env ZOOCFGDIR=/etc/zookeeper/conf ZOOCFG=zoo.cfg /usr/lib/zookeeper/bin/zkServer.sh stop', user='zookeeper')
    self.assertResourceCalled('Execute', 'rm -f /var/run/zookeeper/zookeeper_server.pid')
    self.assertNoMoreResources()
