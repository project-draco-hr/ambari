{
  while (shouldRun) {
    try {
      Thread.sleep(sleepTime);
      doWork();
    }
 catch (    InterruptedException ex) {
      LOG.warn("Scheduler thread is interrupted going to stop",ex);
      shouldRun=false;
    }
catch (    Exception ex) {
      LOG.warn("Exception received",ex);
    }
  }
}
