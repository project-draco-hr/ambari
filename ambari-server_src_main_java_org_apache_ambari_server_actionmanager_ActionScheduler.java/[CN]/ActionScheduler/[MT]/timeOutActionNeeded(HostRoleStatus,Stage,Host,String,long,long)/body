{
  if ((!status.equals(HostRoleStatus.QUEUED)) && (!status.equals(HostRoleStatus.IN_PROGRESS))) {
    return false;
  }
  if (host.getState().equals(HostState.HEARTBEAT_LOST)) {
    LOG.debug("Timing out action since agent is not heartbeating.");
    return true;
  }
  if (currentTime > stage.getLastAttemptTime(host.getHostName(),role) + taskTimeout) {
    return true;
  }
  return false;
}
