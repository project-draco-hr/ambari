def sqoop(type=None):
    import params
    Link((params.sqoop_lib + '/mysql-connector-java.jar'), to='/usr/share/java/mysql-connector-java.jar')
    jdbc_connector()
    Directory(params.sqoop_conf_dir, owner=params.sqoop_user, group=params.user_group, recursive=True)
    File(format('{sqoop_conf_dir}/sqoop-env.sh'), owner=params.sqoop_user, group=params.user_group, content=InlineTemplate(params.sqoop_env_sh_template))
    update_config_permissions(['sqoop-env-template.sh', 'sqoop-site-template.xml', 'sqoop-site.xml'])
    pass
