def test_stop_default(self):
    self.executeScript('2.1/services/STORM/package/scripts/rest_api.py', classname='StormRestApi', command='stop', config_file='default.json')
    self.assertResourceCalled('Execute', 'sudo kill `cat /var/run/storm/restapi.pid`', not_if='! (ls /var/run/storm/restapi.pid >/dev/null 2>&1 && ps -p `cat /var/run/storm/restapi.pid` >/dev/null 2>&1)')
    self.assertResourceCalled('Execute', 'sudo kill -9 `cat /var/run/storm/restapi.pid`', not_if='sleep 2; ! (ls /var/run/storm/restapi.pid >/dev/null 2>&1 && ps -p `cat /var/run/storm/restapi.pid` >/dev/null 2>&1) || sleep 20; ! (ls /var/run/storm/restapi.pid >/dev/null 2>&1 && ps -p `cat /var/run/storm/restapi.pid` >/dev/null 2>&1)', ignore_failures=True)
    self.assertResourceCalled('File', '/var/run/storm/restapi.pid', action=['delete'])
    self.assertNoMoreResources()
