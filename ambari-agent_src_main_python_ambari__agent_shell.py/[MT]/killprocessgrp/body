def killprocessgrp(pid):
    try:
        os.killpg(pid, signal.SIGTERM)
        time.sleep(5)
        try:
            os.killpg(pid, signal.SIGKILL)
        except:
            logger.warn(('Failed to send SIGKILL to PID %d. Process exited?' % pid))
    except:
        logger.warn(('Failed to kill PID %d' % pid))
