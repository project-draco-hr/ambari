{
  Map<String,ResourceDefinition> mapChildren=new HashMap<String,ResourceDefinition>();
  HostComponentResourceDefinition hostComponentResource=new HostComponentResourceDefinition(null,m_clusterId,getId());
  PropertyId hostComponentIdProperty=getClusterController().getSchema(Resource.Type.HostComponent).getKeyPropertyId(Resource.Type.HostComponent);
  hostComponentResource.getQuery().addProperty(hostComponentIdProperty);
  mapChildren.put(hostComponentResource.getPluralName(),hostComponentResource);
  return mapChildren;
}
