@patch.object(shell, 'call')
@patch.object(shell, 'checked_call')
@patch.object(System, 'os_family', new='ubuntu')
def test_action_install_ubuntu_update(self, shell_mock, call_mock):
    call_mock.return_value = (1, None)
    with Environment('/') as env:
        Package('some_package')
    call_mock.assert_has_calls([call("dpkg --get-selections | grep -v deinstall | awk '{print $1}' | grep '^some-package$'"), call(['/usr/bin/apt-get', '-q', '-o', 'Dpkg::Options::=--force-confdef', '--allow-unauthenticated', '--assume-yes', 'install', 'some-package'], logoutput=False, sudo=True, env={'DEBIAN_FRONTEND': 'noninteractive', }), call(['/usr/bin/apt-get', 'update', '-qq'], logoutput=False, sudo=True)])
    shell_mock.assert_has_calls([call(['/usr/bin/apt-get', '-q', '-o', 'Dpkg::Options::=--force-confdef', '--allow-unauthenticated', '--assume-yes', 'install', 'some-package'], logoutput=False, sudo=True)])
