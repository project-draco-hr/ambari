def get_service_pid_file(name, user):
    '\n  Get the pid file path that was used to start the service by the user.\n  :param name: Service name\n  :param user: User that started the service.\n  :return: PID file path\n  '
    import params
    pid_dir = format('{hadoop_pid_dir_prefix}/{user}')
    pid_file = format('{pid_dir}/hadoop-{user}-{name}.pid')
    return pid_file
