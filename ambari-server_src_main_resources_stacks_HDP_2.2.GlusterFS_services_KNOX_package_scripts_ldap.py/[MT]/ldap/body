def ldap():
    import params
    File(format('{params.knox_conf_dir}/ldap-log4j.properties'), mode=420, group=params.knox_group, owner=params.knox_user, content=params.ldap_log4j)
    File(format('{params.knox_conf_dir}/users.ldif'), mode=420, group=params.knox_group, owner=params.knox_user, content=params.users_ldif)
