def test_configure_default(self):
    self.executeScript('2.1.1/services/FALCON/package/scripts/falcon_server.py', classname='FalconServer', command='configure', config_file='default.json')
    self.assertResourceCalled('Directory', '/hadoop/falcon', owner='falcon', recursive=True)
    self.assertResourceCalled('Directory', '/hadoop/falcon/activemq', owner='falcon', recursive=True)
    self.assertResourceCalled('File', '/etc/falcon/conf/runtime.properties', content=Template('runtime.properties.j2'), mode=420)
    self.assertResourceCalled('File', '/etc/falcon/conf/startup.properties', content=Template('startup.properties.j2'), mode=420)
    self.assertNoMoreResources()
