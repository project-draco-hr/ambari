def start(self, env, upgrade_type=None):
    import params
    env.set_params(params)
    self.configure(env)
    if (params.hdp_stack_version_major and (compare_versions(params.hdp_stack_version_major, '2.2.0.0') >= 0)):
        resource_created = copy_to_hdfs('mapreduce', params.user_group, params.hdfs_user, host_sys_prepped=params.host_sys_prepped)
        resource_created = (copy_to_hdfs('tez', params.user_group, params.hdfs_user, host_sys_prepped=params.host_sys_prepped) or resource_created)
        resource_created = (copy_to_hdfs('slider', params.user_group, params.hdfs_user, host_sys_prepped=params.host_sys_prepped) or resource_created)
        if resource_created:
            params.HdfsResource(None, action='execute')
    else:
        install_tez_jars()
    service('historyserver', action='start', serviceName='mapreduce')
