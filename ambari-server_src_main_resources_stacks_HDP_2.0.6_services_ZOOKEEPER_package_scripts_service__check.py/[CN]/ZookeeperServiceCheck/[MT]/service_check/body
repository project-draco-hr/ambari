def service_check(self, env):
    import params
    env.set_params(params)
    File('/tmp/zkSmoke.sh', mode=493, content=StaticFile('zkSmoke.sh'))
    cmd_qourum = format('/tmp/zkSmoke.sh {smoke_script} {smokeuser} {config_dir} {clientPort} {security_enabled} {kinit_path_local} {smokeUserKeytab}', smokeUserKeytab=(params.smoke_user_keytab if params.security_enabled else 'no_keytab'))
    Execute(cmd_qourum, tries=3, try_sleep=5, path='/usr/sbin:/sbin:/usr/local/bin:/bin:/usr/bin', logoutput=True)
