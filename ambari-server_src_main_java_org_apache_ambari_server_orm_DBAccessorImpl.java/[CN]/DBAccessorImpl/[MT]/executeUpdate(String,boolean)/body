{
  Statement statement=getConnection().createStatement();
  try {
    return statement.executeUpdate(query);
  }
 catch (  SQLException e) {
    LOG.warn("Error executing query: " + query + ", "+ "errorCode = "+ e.getErrorCode()+ ", message = "+ e.getMessage());
    if (!ignoreErrors) {
      throw e;
    }
  }
  return 0;
}
