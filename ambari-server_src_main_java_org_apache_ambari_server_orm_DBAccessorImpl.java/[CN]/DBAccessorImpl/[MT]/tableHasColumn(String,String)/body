{
  boolean result=false;
  DatabaseMetaData metaData=getDatabaseMetaData();
  String schemaFilter=null;
  if (getDbType().equals(Configuration.ORACLE_DB_NAME)) {
    schemaFilter=configuration.getDatabaseUser();
  }
  ResultSet rs=metaData.getColumns(null,schemaFilter,convertObjectName(tableName),convertObjectName(columnName));
  if (rs != null) {
    try {
      if (rs.next()) {
        return rs.getString("COLUMN_NAME") != null && rs.getString("COLUMN_NAME").equalsIgnoreCase(columnName);
      }
    }
  finally {
      rs.close();
    }
  }
  return result;
}
