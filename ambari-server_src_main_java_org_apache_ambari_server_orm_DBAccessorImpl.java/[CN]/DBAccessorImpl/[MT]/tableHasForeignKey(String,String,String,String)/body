{
  boolean result=false;
  DatabaseMetaData metaData=getDatabaseMetaData();
  String schemaFilter=null;
  if (getDbType().equals(Configuration.ORACLE_DB_NAME)) {
    schemaFilter=configuration.getDatabaseUser();
  }
  ResultSet rs=metaData.getCrossReference(null,schemaFilter,convertObjectName(tableName),null,schemaFilter,convertObjectName(refTableName));
  if (rs != null) {
    try {
      while (rs.next()) {
        String refColumn=rs.getString("FKCOLUMN_NAME");
        if (refColumn != null && refColumn.equalsIgnoreCase(refColumnName)) {
          result=true;
        }
      }
    }
  finally {
      rs.close();
    }
  }
  return result;
}
