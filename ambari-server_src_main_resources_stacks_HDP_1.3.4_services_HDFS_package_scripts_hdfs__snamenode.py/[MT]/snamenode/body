def snamenode(action=None, format=False):
    import params
    if (action == 'configure'):
        Directory(params.fs_checkpoint_dir, recursive=True, mode=493, owner=params.hdfs_user, group=params.user_group)
    elif (action == 'start'):
        service(action=action, name='secondarynamenode', user=params.hdfs_user, create_pid_dir=True, create_log_dir=True, keytab=params.dfs_secondary_namenode_keytab_file, principal=params.dfs_secondary_namenode_kerberos_principal)
    elif (action == 'stop'):
        service(action=action, name='secondarynamenode', user=params.hdfs_user, create_pid_dir=True, create_log_dir=True, keytab=params.dfs_secondary_namenode_keytab_file, principal=params.dfs_secondary_namenode_kerberos_principal)
