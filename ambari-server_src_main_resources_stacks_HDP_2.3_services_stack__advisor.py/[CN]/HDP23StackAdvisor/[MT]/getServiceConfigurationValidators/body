def getServiceConfigurationValidators(self):
    parentValidators = super(HDP23StackAdvisor, self).getServiceConfigurationValidators()
    childValidators = {'HDFS': {'hdfs-site': self.validateHDFSConfigurations, }, 'HIVE': {'hiveserver2-site': self.validateHiveServer2Configurations, 'hive-site': self.validateHiveConfigurations, }, 'HBASE': {'hbase-site': self.validateHBASEConfigurations, }, 'KAKFA': {'kafka-broker': self.validateKAFKAConfigurations, }, 'YARN': {'yarn-site': self.validateYARNConfigurations, }, 'HAWQ': {'hawq-site': self.validateHAWQSiteConfigurations, 'hdfs-client': self.validateHAWQHdfsClientConfigurations, }, }
    self.mergeValidators(parentValidators, childValidators)
    return parentValidators
