def getServiceConfigurationValidators(self):
    parentValidators = super(HDP23StackAdvisor, self).getServiceConfigurationValidators()
    childValidators = {'HDFS': {'hdfs-site': self.validateHDFSConfigurations, }, 'HIVE': {'hiveserver2-site': self.validateHiveServer2Configurations, }, 'HBASE': {'hbase-site': self.validateHBASEConfigurations, }, 'KAKFA': {'kafka-broker': self.validateKAFKAConfigurations, }, }
    self.mergeValidators(parentValidators, childValidators)
    return parentValidators
