def validateStormConfigurations(self, properties, recommendedDefaults):
    validationItems = [{'config-name': 'drpc.childopts', 'message': self.validateXmxValue(properties, recommendedDefaults, 'drpc.childopts'), }, {'config-name': 'ui.childopts', 'message': self.validateXmxValue(properties, recommendedDefaults, 'ui.childopts'), }, {'config-name': 'logviewer.childopts', 'message': self.validateXmxValue(properties, recommendedDefaults, 'logviewer.childopts'), }]
    return self.toConfigurationValidationErrors(validationItems, 'storm-site')
