def validateTezConfigurations(self, properties, recommendedDefaults, configurations, services, hosts):
    validationItems = [{'config-name': 'tez.am.resource.memory.mb', 'item': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'tez.am.resource.memory.mb'), }, {'config-name': 'tez.am.java.opts', 'item': self.validateXmxValue(properties, recommendedDefaults, 'tez.am.java.opts'), }, {'config-name': 'tez.queue.name', 'item': self.validatorYarnQueue(properties, recommendedDefaults, 'tez.queue.name', services), }]
    return self.toConfigurationValidationProblems(validationItems, 'tez-site')
