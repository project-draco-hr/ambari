def validateTezConfigurations(self, properties, recommendedDefaults):
    validationItems = [{'config-name': 'tez.am.resource.memory.mb', 'message': self.validatorLessThenDefaultValue(properties, recommendedDefaults, 'tez.am.resource.memory.mb'), }, {'config-name': 'tez.am.java.opts', 'message': self.validateXmxValue(properties, recommendedDefaults, 'tez.am.java.opts'), }]
    return self.toConfigurationValidationErrors(validationItems, 'tez-site')
