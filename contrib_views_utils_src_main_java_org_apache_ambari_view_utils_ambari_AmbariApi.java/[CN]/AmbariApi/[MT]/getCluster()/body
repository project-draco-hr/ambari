{
  if (cluster == null) {
    if (isLocalCluster()) {
      cluster=context.getCluster();
    }
 else     if (isRemoteCluster()) {
      cluster=getRemoteCluster();
    }
 else {
      throw new NoClusterAssociatedException("RA050 View is not associated with any cluster. No way to request Ambari.");
    }
  }
  return cluster;
}
