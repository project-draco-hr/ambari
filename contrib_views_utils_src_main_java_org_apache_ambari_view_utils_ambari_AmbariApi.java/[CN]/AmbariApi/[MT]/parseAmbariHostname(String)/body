{
  String hostname;
  try {
    URI uri=new URI(remoteUrlCluster);
    hostname=String.format("%s://%s",uri.getScheme(),uri.getHost());
    if (uri.getPort() != -1) {
      hostname+=":" + uri.getPort();
    }
  }
 catch (  URISyntaxException e) {
    throw new AmbariApiException("RA060 Malformed URI of remote Ambari");
  }
  return hostname;
}
