{
  HostGroup group=new HostGroup();
  TreeNode<Resource> components=host.getChild("host_components");
  for (  TreeNode<Resource> component : components.getChildren()) {
    group.getComponents().add((String)component.getObject().getPropertyValue("HostRoles/component_name"));
  }
  group.addAmbariComponentIfLocalhost((String)host.getObject().getPropertyValue(PropertyHelper.getPropertyId("Hosts","host_name")));
  return group;
}
