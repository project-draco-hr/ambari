{
  if (scope.equals(WidgetEntity.USER_SCOPE)) {
    return true;
  }
  SecurityContext securityContext=SecurityContextHolder.getContext();
  securityContext.getAuthentication().getAuthorities();
  boolean hasPermissionForClusterScope=false;
  for (  GrantedAuthority grantedAuthority : securityContext.getAuthentication().getAuthorities()) {
    if (((AmbariGrantedAuthority)grantedAuthority).getPrivilegeEntity().getPermission().getId() == PermissionEntity.AMBARI_ADMIN_PERMISSION || ((AmbariGrantedAuthority)grantedAuthority).getPrivilegeEntity().getPermission().getId() == PermissionEntity.CLUSTER_OPERATE_PERMISSION) {
      hasPermissionForClusterScope=true;
    }
  }
  if (hasPermissionForClusterScope) {
    return true;
  }
 else {
    return false;
  }
}
