@replace_underscores
def remove_package(self, name):
    if self._check_existence(name):
        cmd = (REMOVE_CMD % name)
        Logger.info(("Removing package %s ('%s')" % (name, cmd)))
        shell.checked_call(cmd, sudo=True)
    else:
        Logger.info(('Skipping removing non-existent package %s' % name))
