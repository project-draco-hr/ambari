def get_role_component_current_hdp_version():
    '\n  Gets the current HDP version of the component that this role command is for.\n  :return:  the current HDP version of the specified component or None\n  '
    command_role = default('/role', '')
    if (command_role in SERVER_ROLE_DIRECTORY_MAP):
        hdp_select_component = SERVER_ROLE_DIRECTORY_MAP[command_role]
        current_hdp_version = get_hdp_version(hdp_select_component)
        Logger.info('{0} is currently at version {1}'.format(hdp_select_component, current_hdp_version))
        return current_hdp_version
    return None
