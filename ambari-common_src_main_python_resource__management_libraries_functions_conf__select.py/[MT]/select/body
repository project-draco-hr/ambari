def select(stack_name, package, version, try_create=True):
    '\n  Selects a config version for the specified package.  Currently only works if the version is\n  for HDP-2.3 or higher\n  :stack_name: the name of the stack\n  :package: the name of the package, as-used by conf-select\n  :version: the version number to create\n  :try_create: optional argument to attempt to create the directory before setting it\n  '
    if (not _valid(stack_name, package, version)):
        return
    if try_create:
        create(stack_name, package, version)
    shell.call(TEMPLATE.format('set-conf-dir', package, version), logoutput=False, quiet=False)
