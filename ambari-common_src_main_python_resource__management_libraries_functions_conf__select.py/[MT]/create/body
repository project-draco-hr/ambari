def create(stack_name, package, version):
    '\n  Creates a config version for the specified package\n  :stack_name: the name of the stack\n  :package: the name of the package, as-used by conf-select\n  :version: the version number to create\n  '
    if (not _valid(stack_name, package, version)):
        return
    shell.call(TEMPLATE.format('create-conf-dir', package, version), logoutput=False, quiet=True)
