{
  clusterGlobalLock.readLock().lock();
  try {
    writeLock.lock();
    try {
      if (!persisted) {
        persistEntities();
        refresh();
        host.refresh();
        serviceComponent.refresh();
        persisted=true;
        StackId stackId=getDesiredStackVersion();
        ServiceComponentInstalledEvent event=new ServiceComponentInstalledEvent(getClusterId(),stackId.getStackName(),stackId.getStackVersion(),getServiceName(),getServiceComponentName(),getHostName());
        eventPublisher.publish(event);
      }
 else {
        saveIfPersisted();
      }
    }
  finally {
      writeLock.unlock();
    }
  }
  finally {
    clusterGlobalLock.readLock().unlock();
  }
}
