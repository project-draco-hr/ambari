{
  clusterGlobalLock.readLock().lock();
  try {
    writeLock.lock();
    try {
      desiredStateEntity.setRestartRequired(restartRequired);
      saveIfPersisted();
      helper.invalidateStaleConfigsCache(this);
    }
  finally {
      writeLock.unlock();
    }
  }
  finally {
    clusterGlobalLock.readLock().unlock();
  }
}
