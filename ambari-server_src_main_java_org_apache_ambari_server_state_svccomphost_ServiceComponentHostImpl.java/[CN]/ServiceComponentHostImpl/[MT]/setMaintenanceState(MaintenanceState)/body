{
  clusterGlobalLock.readLock().lock();
  try {
    writeLock.lock();
    try {
      desiredStateEntity.setMaintenanceState(state);
      saveIfPersisted();
      MaintenanceModeEvent event=new MaintenanceModeEvent(state,this);
      eventPublisher.publish(event);
    }
  finally {
      writeLock.unlock();
    }
  }
  finally {
    clusterGlobalLock.readLock().unlock();
  }
}
