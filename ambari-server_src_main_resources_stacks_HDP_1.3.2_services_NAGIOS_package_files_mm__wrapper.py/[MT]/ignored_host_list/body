def ignored_host_list(service, component):
    '\n  :param service: current service\n  :param component: current component\n  :return: all hosts where specified host component is in ignored state\n  '

    def str_norm(s):
        return s.strip().upper()
    result = []
    try:
        with open(IGNORE_DAT_FILE, 'r') as f:
            lines = filter(None, f.read().split(os.linesep))
    except IOError:
        return result
    if lines:
        for l in lines:
            tokens = l.split(' ')
            if ((len(tokens) == 3) and (str_norm(tokens[1]) == str_norm(service)) and (str_norm(tokens[2]) == str_norm(component))):
                result.append(tokens[0])
    return result
