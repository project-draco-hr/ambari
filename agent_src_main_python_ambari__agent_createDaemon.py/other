import os
import sys
UMASK = 18
WORKDIR = '/'
MAXFD = 1024
if hasattr(os, 'devnull'):
    REDIRECT_TO = os.devnull
else:
    REDIRECT_TO = '/dev/null'
if (__name__ == '__main__'):
    retCode = createDaemon()
    sys.exit(retCode)
