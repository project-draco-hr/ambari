@patch('glob.glob')
def test_stop_single(self, glob_mock):
    glob_mock.return_value = ['/var/run/flume/b1.pid']
    self.executeScript('2.0.6/services/FLUME/package/scripts/flume_handler.py', classname='FlumeHandler', command='stop', config_file='flume_target.json')
    self.assertTrue(glob_mock.called)
    self.assertResourceCalled('Execute', 'kill `cat /var/run/flume/b1.pid` > /dev/null 2>&1', ignore_failures=True)
    self.assertResourceCalled('File', '/var/run/flume/b1.pid', action=['delete'])
    self.assertNoMoreResources()
