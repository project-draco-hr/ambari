{
  logger.info("Closing file." + getShortDescription());
  if (outWriter != null) {
    try {
      outWriter.flush();
      outWriter.close();
      addFileInReadyList(localcurrentFile);
    }
 catch (    Throwable t) {
      logger.error(t.getLocalizedMessage(),t);
    }
  }
  this.stopHDFSCopyThread();
  isClosed=true;
}
