{
  if (outWriter == null) {
    String currentFilePath=localFilePath + getCurrentFileName();
    localcurrentFile=new File(currentFilePath);
    if (localcurrentFile.getParentFile() != null) {
      File parentDir=localcurrentFile.getParentFile();
      if (!parentDir.isDirectory()) {
        parentDir.mkdirs();
      }
    }
    try {
      outWriter=new PrintWriter(new BufferedWriter(new FileWriter(localcurrentFile,true)));
    }
 catch (    IOException e) {
      logger.error("= OutputHDFSFile.buidOutWriter failed for file :  " + localcurrentFile.getAbsolutePath() + " Desc: "+ getShortDescription()+ " errorMsg: "+ e.getLocalizedMessage(),e);
    }
    localFileCreateTime=new Date();
    logger.info("Create file is successful. localFilePath=" + localcurrentFile.getAbsolutePath());
  }
}
