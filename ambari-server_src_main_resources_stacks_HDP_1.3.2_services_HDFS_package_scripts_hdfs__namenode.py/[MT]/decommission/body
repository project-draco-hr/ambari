def decommission():
    import params
    hdfs_user = params.hdfs_user
    conf_dir = params.hadoop_conf_dir
    File(params.exclude_file_path, content=Template('exclude_hosts_list.j2'), owner=hdfs_user, group=params.user_group)
    if (params.update_exclude_file_only == False):
        ExecuteHadoop('dfsadmin -refreshNodes', user=hdfs_user, conf_dir=conf_dir, kinit_override=True)
        pass
