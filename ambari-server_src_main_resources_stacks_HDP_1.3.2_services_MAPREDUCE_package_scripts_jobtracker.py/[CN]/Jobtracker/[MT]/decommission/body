def decommission(self, env):
    import params
    env.set_params(params)
    mapred_user = params.mapred_user
    conf_dir = params.conf_dir
    user_group = params.user_group
    if params.security_enabled:
        Execute(params.kinit_cmd, user=params.mapred_user)
    File(params.exclude_file_path, content=Template('exclude_hosts_list.j2'), owner=mapred_user, group=user_group)
    if (params.update_exclude_file_only == False):
        ExecuteHadoop('mradmin -refreshNodes', user=mapred_user, conf_dir=conf_dir, kinit_override=True)
        pass
    pass
