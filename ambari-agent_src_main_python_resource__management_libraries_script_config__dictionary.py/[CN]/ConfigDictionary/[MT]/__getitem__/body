def __getitem__(self, name):
    '\n    - use Python types\n    - enable lazy failure for unknown configs. \n    '
    try:
        value = super(ConfigDictionary, self).__getitem__(name)
    except KeyError:
        return UnknownConfiguration(name)
    if (value == 'true'):
        value = True
    elif (value == 'false'):
        value = False
    else:
        try:
            value = int(value)
        except (ValueError, TypeError):
            try:
                value = float(value)
            except (ValueError, TypeError):
                pass
    return value
