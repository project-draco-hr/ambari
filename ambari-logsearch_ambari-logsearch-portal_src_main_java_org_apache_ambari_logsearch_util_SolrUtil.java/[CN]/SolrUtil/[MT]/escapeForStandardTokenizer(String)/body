{
  if (search == null) {
    return null;
  }
  String newString=search.trim();
  String newSearch=escapeQueryChars(newString);
  boolean isSingleWord=true;
  for (int i=0; i < search.length(); i++) {
    if (Character.isWhitespace(search.charAt(i))) {
      isSingleWord=false;
    }
  }
  if (!isSingleWord) {
    newSearch="\"" + newSearch + "\"";
  }
  return newSearch;
}
