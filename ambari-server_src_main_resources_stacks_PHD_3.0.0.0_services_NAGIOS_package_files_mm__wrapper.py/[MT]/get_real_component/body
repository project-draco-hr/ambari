def get_real_component():
    try:
        arr_desc = os.environ[N_SD]
        SEPARATOR = '::'
        comp_name = arr_desc.replace(SEPARATOR, ' ').split(' ')[0]
    except KeyError:
        comp_name = ''
    mapping = {'HBASEMASTER': 'HBASE_MASTER', 'REGIONSERVER': 'HBASE_REGIONSERVER', 'JOBHISTORY': 'MAPREDUCE2', 'HIVE-METASTORE': 'HIVE_METASTORE', 'HIVE-SERVER': 'HIVE_SERVER', 'FLUME': 'FLUME_HANDLER', 'HUE': 'HUE_SERVER', 'WEBHCAT': 'WEBHCAT_SERVER', }
    if (comp_name in mapping):
        comp_name = mapping.get(comp_name)
    return comp_name
