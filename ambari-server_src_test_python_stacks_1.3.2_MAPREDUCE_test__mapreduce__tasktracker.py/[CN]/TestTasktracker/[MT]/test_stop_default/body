def test_stop_default(self):
    self.executeScript('1.3.2/services/MAPREDUCE/package/scripts/tasktracker.py', classname='Tasktracker', command='stop', config_file='default.json')
    self.assertResourceCalled('Execute', 'export HADOOP_LIBEXEC_DIR=/usr/lib/hadoop/libexec && /usr/lib/hadoop/bin/hadoop-daemon.sh --config /etc/hadoop/conf stop tasktracker', user='mapred')
    self.assertResourceCalled('File', '/var/run/hadoop/mapred/hadoop-mapred-tasktracker.pid', action=['delete'])
    self.assertNoMoreResources()
