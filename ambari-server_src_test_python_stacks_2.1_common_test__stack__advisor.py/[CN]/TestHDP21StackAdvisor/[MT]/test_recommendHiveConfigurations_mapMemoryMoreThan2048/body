def test_recommendHiveConfigurations_mapMemoryMoreThan2048(self):
    configurations = {}
    clusterData = {'mapMemory': 3000, 'reduceMemory': 2056, 'containers': 3, 'ramPerContainer': 1024, }
    expected = {'hive-site': {'properties': {'hive.auto.convert.join.noconditionaltask.size': '1048576000', 'hive.tez.java.opts': '-server -Xmx2400m -Djava.net.preferIPv4Stack=true -XX:NewRatio=8 -XX:+UseNUMA -XX:+UseParallelGC', 'hive.tez.container.size': '3000', }, }, }
    self.stackAdvisor.recommendHiveConfigurations(configurations, clusterData)
    self.assertEquals(configurations, expected)
