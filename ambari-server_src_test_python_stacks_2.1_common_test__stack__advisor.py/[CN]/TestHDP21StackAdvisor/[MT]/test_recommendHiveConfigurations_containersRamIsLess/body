def test_recommendHiveConfigurations_containersRamIsLess(self):
    configurations = {}
    clusterData = {'mapMemory': 3000, 'reduceMemory': 2056, 'containers': 3, 'ramPerContainer': 256, }
    expected = {'hive-site': {'properties': {'hive.auto.convert.join.noconditionaltask.size': '268435456', 'hive.tez.java.opts': '-server -Xmx614m -Djava.net.preferIPv4Stack=true -XX:NewRatio=8 -XX:+UseNUMA -XX:+UseParallelGC', 'hive.tez.container.size': '768', }, }, }
    self.stackAdvisor.recommendHiveConfigurations(configurations, clusterData)
    self.assertEquals(configurations, expected)
