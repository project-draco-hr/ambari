def build(self, id='unknown'):
    hardware = Hardware()
    serverStatus = ServerStatus()
    timestamp = int((time.time() * 1000))
    heartbeat = {'responseId': id, 'timestamp': timestamp, 'clusterId': 'unknown', 'stackId': 'unknown', 'hostname': socket.gethostname(), 'hardwareProfile': hardware.get(), 'actionResults': self.actionQueue.result(), 'serversStatus': serverStatus.build(), 'idle': self.actionQueue.isIdle(), }
    return heartbeat
