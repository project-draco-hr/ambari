def mysql_service(daemon_name=None, action='start'):
    cmd = ('service', daemon_name, action)
    if (action == 'status'):
        Execute(cmd, path='/usr/local/bin/:/bin/:/sbin/', logoutput=False, sudo=True)
    else:
        Execute(cmd, path='/usr/local/bin/:/bin/:/sbin/', logoutput=True, sudo=True)
