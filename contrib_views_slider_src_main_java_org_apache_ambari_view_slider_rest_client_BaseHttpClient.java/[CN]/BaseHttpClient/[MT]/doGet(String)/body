{
  String response=null;
  try {
    if (isNeedsAuthentication()) {
      response=ambariApi.readFromAmbari(getUrl() + path,"GET",(String)null,new HashMap<String,String>());
    }
 else {
      response=IOUtils.toString(viewContext.getURLStreamProvider().readAsCurrent(getUrl() + path,"GET",(String)null,new HashMap<String,String>()));
    }
  }
 catch (  Exception e) {
    logger.error("Error while reading from url " + getUrl() + path,e);
    HttpException httpException=new HttpException(e.getLocalizedMessage());
    throw httpException;
  }
  return response;
}
