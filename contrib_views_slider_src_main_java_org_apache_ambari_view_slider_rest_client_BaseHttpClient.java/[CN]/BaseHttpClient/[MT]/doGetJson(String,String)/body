{
  String response=null;
  try {
    Map<String,String> headers=new HashMap<String,String>();
    if (isNeedsAuthentication()) {
      response=ambariApi.readFromAmbari(url + path,"GET",(String)null,headers);
    }
 else {
      response=IOUtils.toString(viewContext.getURLStreamProvider().readAsCurrent(url + path,"GET",(String)null,headers));
    }
  }
 catch (  Exception e) {
    logger.error("Error while reading from url " + url + path,e);
    HttpException httpException=new HttpException(e.getLocalizedMessage());
    throw httpException;
  }
  JsonElement jsonElement=new JsonParser().parse(response);
  return jsonElement;
}
