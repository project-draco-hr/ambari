def ask_question(self, question, numeric=False):
    '\n    :param question: Question to prompt.\n    :param numeric: If True, will cast to an integer.\n    :return: Returns the answer to the question, or None if not a complete string or couldn\'t cast to an integer.\n    If the user enters "q" at any time, will quit.\n    '
    answer = raw_input(question)
    if (answer and (answer != '')):
        answer = answer.strip()
        if (answer.lower() == 'q'):
            Logger.info('Bye bye...')
            self.terminate()
    if (answer == ''):
        answer = None
    if (numeric and (answer is not None)):
        try:
            answer = int(answer)
        except Exception:
            answer = None
    return answer
