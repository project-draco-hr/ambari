def read_conf_file(self, file_path):
    '\n    Parse the configuration file, and return a dictionary of key, value pairs.\n    Ignore any lines that begin with #\n    :param file_path: Properties file to parse.\n    :return: Dictionary with key, value pairs.\n    '
    ambari_props = {}
    if os.path.exists(file_path):
        with open(file_path, 'r') as f:
            lines = f.readlines()
            if lines:
                Logger.debug('Reading file {0}, has {1} lines.'.format(file_path, len(lines)))
                for l in lines:
                    l = l.strip()
                    if l.startswith('#'):
                        continue
                    parts = l.split('=')
                    if (len(parts) >= 2):
                        prop = parts[0]
                        value = ''.join(parts[1:])
                        ambari_props[prop] = value
    return ambari_props
