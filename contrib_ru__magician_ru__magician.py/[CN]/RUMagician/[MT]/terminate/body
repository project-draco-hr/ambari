def terminate(self, signum=None, stack=None):
    '\n    Exit gracefully, closing any option file handles or connections.\n    It is important to use print statements instead of Logging statements in case that the logger is not yet\n    initialized.\n    :param signum: Usually SIGTERM, SIGTINT, or None (if user entered "q").\n    :param stack: Stack trace\n    '
    if signum:
        print 'Caught termination signal {0}. Will exit gracefully.'.format(signum)
    if (hasattr(self, 'cursor') or hasattr(self, 'conn')):
        try:
            print 'Will try to close database connection.'
            if (hasattr(self, 'cursor') and self.cursor):
                self.cursor.close()
            if (hasattr(self, 'conn') and self.conn):
                self.conn.close()
            print 'Closed database connection successfully.'
        except Exception as e:
            print 'Unable to close database connection. Error: {0}\n'.format(e.message)
    sys.exit(0)
