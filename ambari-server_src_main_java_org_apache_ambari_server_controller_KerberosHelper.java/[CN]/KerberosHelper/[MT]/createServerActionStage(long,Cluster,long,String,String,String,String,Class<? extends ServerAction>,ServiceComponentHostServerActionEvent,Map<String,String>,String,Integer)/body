{
  Stage stage=createNewStage(id,cluster,requestId,requestContext,clusterHostInfo,commandParams,hostParams);
  stage.addServerActionCommand(actionClass.getName(),Role.AMBARI_SERVER_ACTION,RoleCommand.EXECUTE,cluster.getClusterName(),event,commandParameters,commandDetail,ambariManagementController.findConfigurationTagsWithOverrides(cluster,null),timeout,false);
  return stage;
}
