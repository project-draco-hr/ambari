@staticmethod
def get_stack_tools():
    '\n    Read stack_tools config property from resources/stacks/HDP/2.0.6/properties/stack_tools.json\n    '
    stack_tools_file = os.path.join(RMFTestCase.get_src_folder(), PATH_TO_STACKS, '2.0.6', 'properties', 'stack_tools.json')
    with open(stack_tools_file, 'r') as f:
        return f.read()
