def get_proc_status(pid):
    pid = int(pid)
    path = ('/proc/%d/status' % pid)
    if (not os.path.exists(path)):
        return None
    status_file = open(path)
    lines = status_file.readlines()
    for line in lines:
        if line.startswith('State:'):
            return line.split(':', 1)[1].strip().split(' ')[0].split(' ', 1)[0]
    return None
