def test_stop_during_upgrade_bad_hive_version(self):
    try:
        self.executeScript((self.COMMON_SERVICES_PACKAGE_DIR + '/scripts/hive_server.py'), classname='HiveServer', command='restart', config_file='hive-upgrade.json', hdp_stack_version=self.UPGRADE_STACK_VERSION, target=RMFTestCase.TARGET_COMMON_SERVICES, call_mocks=[(0, 'BAD VERSION')])
        self.fail('Invalid hive version should have caused an exception')
    except:
        pass
    self.assertResourceCalled('Execute', ('ambari-python-wrap', '/usr/bin/hdp-select', 'set', 'hive-server2', '2.2.1.0-2065'), sudo=True)
    self.assertNoMoreResources()
