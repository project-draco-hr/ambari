@patch('socket.socket')
def test_stop_secured(self, socket_mock):
    self.executeScript('2.0.6/services/HIVE/package/scripts/hive_server.py', classname='HiveServer', command='stop', config_file='secured.json')
    self.assertResourceCalled('Execute', 'kill `cat /var/run/hive/hive-server.pid` >/dev/null 2>&1 && rm -f /var/run/hive/hive-server.pid', not_if='! (ls /var/run/hive/hive-server.pid >/dev/null 2>&1 && ps -p `cat /var/run/hive/hive-server.pid` >/dev/null 2>&1)')
    self.assertNoMoreResources()
    self.assertFalse(socket_mock.called)
