{
  Collection<String> hosts=new HashSet<String>();
  Matcher m=HOSTGROUP_PORT_REGEX.matcher(val);
  while (m.find()) {
    String groupName=m.group(1);
    String port=m.group(2);
    HostGroup hostGroup=hostGroups.get(groupName);
    if (hostGroup == null) {
      throw new IllegalArgumentException("Unable to match blueprint host group token to a host group: " + groupName);
    }
    for (    String host : hostGroup.getHostInfo()) {
      if (port != null) {
        host+=":" + port;
      }
      hosts.add(host);
    }
  }
  return hosts;
}
