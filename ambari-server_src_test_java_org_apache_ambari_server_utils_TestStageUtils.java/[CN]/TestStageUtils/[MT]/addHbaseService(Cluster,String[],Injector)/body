{
  cl.setDesiredStackVersion(new StackId("HDP-0.2"));
  cl.addService("HBASE");
  cl.getService("HBASE").addServiceComponent("HBASE_MASTER");
  cl.getService("HBASE").addServiceComponent("HBASE_REGIONSERVER");
  cl.getService("HBASE").getServiceComponent("HBASE_MASTER").addServiceComponentHost(new ServiceComponentHostImpl(cl.getService("HBASE").getServiceComponent("HBASE_MASTER"),hostList[0],false,injector));
  for (int i=1; i < hostList.length; i++) {
    cl.getService("HBASE").getServiceComponent("HBASE_REGIONSERVER").addServiceComponentHost(new ServiceComponentHostImpl(cl.getService("HBASE").getServiceComponent("HBASE_REGIONSERVER"),hostList[i],false,injector));
  }
}
