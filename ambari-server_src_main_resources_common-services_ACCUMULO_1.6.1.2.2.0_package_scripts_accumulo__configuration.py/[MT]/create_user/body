def create_user(user, password):
    import params
    rpassfile = format('{params.exec_tmp_dir}/pass0')
    passfile = format('{params.exec_tmp_dir}/pass')
    cmdfile = format('{params.exec_tmp_dir}/cmds')
    try:
        File(cmdfile, mode=384, group=params.user_group, owner=params.accumulo_user, content=InlineTemplate(format('createuser {user}\ngrant -s System.CREATE_TABLE -u {user}\n')))
        File(rpassfile, mode=384, group=params.user_group, owner=params.accumulo_user, content=InlineTemplate('{{root_password}}\n'))
        File(passfile, mode=384, group=params.user_group, owner=params.accumulo_user, content=InlineTemplate(format('{params.root_password}\n{password}\n{password}\n')))
        Execute(format('cat {passfile} | {params.daemon_script} shell -u root -f {cmdfile}'), not_if=as_user(format('cat {rpassfile} | {params.daemon_script} shell -u root -e "userpermissions -u {user}"'), params.accumulo_user), user=params.accumulo_user)
    finally:
        try_remove(rpassfile)
        try_remove(passfile)
        try_remove(cmdfile)
