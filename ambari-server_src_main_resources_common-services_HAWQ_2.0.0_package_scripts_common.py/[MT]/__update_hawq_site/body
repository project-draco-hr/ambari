def __update_hawq_site():
    '\n  Sets up hawq-site.xml\n  '
    import params
    XmlConfig('hawq-site.xml', conf_dir=constants.hawq_config_dir, configurations=params.hawq_site, configuration_attributes=params.config['configuration_attributes']['hawq-site'], owner=constants.hawq_user, group=constants.hawq_group, mode=420)
