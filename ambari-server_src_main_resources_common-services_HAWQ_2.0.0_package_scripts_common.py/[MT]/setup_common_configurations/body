def setup_common_configurations():
    '\n  Sets up the config files common to master, standby and segment nodes.\n  '
    import params
    substituted_conf_dict = __substitute_hostnames_in_hawq_site()
    XmlConfig('hawq-site.xml', conf_dir=constants.hawq_config_dir, configurations=substituted_conf_dict, configuration_attributes=params.config['configuration_attributes']['hawq-site'], owner=constants.hawq_user, group=constants.hawq_group, mode=420)
    if ('yarn-site' in params.config['configurations']):
        __update_yarn_client()
    __set_osparams()
