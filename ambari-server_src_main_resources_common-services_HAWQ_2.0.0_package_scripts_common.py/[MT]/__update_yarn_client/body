def __update_yarn_client():
    '\n  Writes yarn-client.xml on the local filesystem on hawq nodes.\n  If yarn ha is enabled, appends related parameters to yarn-client.xml\n  '
    import params
    XmlConfig('yarn-client.xml', conf_dir=hawq_constants.hawq_config_dir, configurations=params.yarn_client, configuration_attributes=params.config['configuration_attributes']['yarn-client'], owner=hawq_constants.hawq_user, group=hawq_constants.hawq_group, mode=420)
