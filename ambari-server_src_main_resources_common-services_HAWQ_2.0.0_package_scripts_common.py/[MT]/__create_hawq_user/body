def __create_hawq_user():
    '\n  Creates HAWQ user with password and default group.\n  '
    import params
    Group(constants.hawq_group, ignore_failures=True)
    User(constants.hawq_user, gid=constants.hawq_group, password=crypt.crypt(params.hawq_password, 'salt'), groups=[constants.hawq_group, params.user_group], ignore_failures=True)
