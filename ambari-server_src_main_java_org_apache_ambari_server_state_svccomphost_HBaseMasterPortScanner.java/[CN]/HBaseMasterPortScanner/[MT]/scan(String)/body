{
  try {
    Socket socket=new Socket();
    socket.connect(new InetSocketAddress(hostname,port),scanTimeoutMsc);
    socket.close();
    LOG.info(hostname + ":" + port+ " HBASE_MASTER active");
    return true;
  }
 catch (  ConnectException e) {
    LOG.info(hostname + ":" + port+ " HBASE_MASTER passive");
    return false;
  }
catch (  Exception ex) {
    LOG.info(hostname + ":" + port+ " HBASE_MASTER passive");
    LOG.error(ex);
    return false;
  }
}
