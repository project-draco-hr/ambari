def test_recommendHDFSConfigurations(self):
    configurations = {}
    clusterData = {'totalAvailableRam': 2048, }
    expected = {'hadoop-env': {'properties': {'namenode_heapsize': '1024', 'namenode_opt_newsize': '256', 'namenode_opt_maxnewsize': '256', }, }, }
    self.stackAdvisor.recommendHDFSConfigurations(configurations, clusterData, '', '')
    self.assertEquals(configurations, expected)
