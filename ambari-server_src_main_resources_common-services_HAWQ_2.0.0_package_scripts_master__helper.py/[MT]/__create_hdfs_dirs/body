def __create_hdfs_dirs():
    '\n  Creates the required HDFS directories for HAWQ\n  '
    import params
    data_dir_owner = (hawq_constants.hawq_user_secured if params.security_enabled else hawq_constants.hawq_user)
    params.HdfsResource(params.hawq_hdfs_data_dir, type='directory', action='create_on_execute', owner=data_dir_owner, group=hawq_constants.hawq_group, mode=493)
    params.HdfsResource(None, action='execute')
