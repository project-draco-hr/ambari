def stop(mode=hawq_constants.FAST, component=None):
    '\n  Stops the HAWQ Master/Standby, if component is cluster performs cluster level operation from master\n  '
    import params
    component_name = (component if component else __get_component_name())
    utils.exec_hawq_operation(hawq_constants.STOP, '{0} -M {1} -a -v'.format(component_name, mode), only_if=utils.chk_hawq_process_status_cmd(params.hawq_master_address_port, component_name))
