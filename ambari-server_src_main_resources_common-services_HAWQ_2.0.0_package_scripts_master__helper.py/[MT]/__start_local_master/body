def __start_local_master():
    '\n  Starts HAWQ Master or HAWQ Standby Master component on the host\n  '
    import params
    component_name = __get_component_name()
    __setup_hdfs_dirs()
    utils.exec_hawq_operation(hawq_constants.START, '{0} -a -v'.format(component_name), not_if=utils.chk_hawq_process_status_cmd(params.hawq_master_address_port, component_name))
