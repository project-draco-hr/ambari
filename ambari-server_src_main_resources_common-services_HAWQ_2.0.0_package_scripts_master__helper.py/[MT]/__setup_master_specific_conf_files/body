def __setup_master_specific_conf_files():
    '\n  Sets up config files only applicable for HAWQ Master and Standby nodes\n  '
    import params
    File(constants.hawq_check_file, content=params.gpcheck_content, owner=constants.hawq_user, group=constants.hawq_group, mode=420)
    File(constants.hawq_slaves_file, content=Template('slaves.j2'), owner=constants.hawq_user, group=constants.hawq_group, mode=420)
    File(constants.hawq_hosts_file, content=Template('hawq-hosts.j2'), owner=constants.hawq_user, group=constants.hawq_group, mode=420)
