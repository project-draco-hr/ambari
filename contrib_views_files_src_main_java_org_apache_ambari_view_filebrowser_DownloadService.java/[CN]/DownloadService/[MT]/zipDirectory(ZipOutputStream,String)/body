{
  try {
    zip.putNextEntry(new ZipEntry(path.substring(1) + "/"));
  }
 catch (  IOException ex) {
    logger.error("Error zipping directory " + path.substring(1) + "/ (directory ignored)"+ ": "+ ex.getMessage());
  }
 finally {
    try {
      zip.closeEntry();
    }
 catch (    IOException ex) {
      logger.error("Error zipping directory " + path.substring(1) + "/ (directory ignored)"+ ": "+ ex.getMessage());
    }
  }
}
