{
  Map<String,String> properties=new HashMap<String,String>();
  properties.put("a","b");
  properties.put("c","d");
  Config config=configFactory.createNew(cluster,"hdfs-site",properties);
  config.setVersionTag("testversion");
  Host host=clusters.getHost("h1");
  Map<String,Config> configs=new HashMap<String,Config>();
  Map<String,Host> hosts=new HashMap<String,Host>();
  configs.put(config.getType(),config);
  hosts.put(host.getHostName(),host);
  ConfigGroup configGroup=configGroupFactory.createNew(cluster,"cg-test","HDFS","New HDFS configs for h1",configs,hosts);
  configGroup.persist();
  return configGroup;
}
