def __init__(self, basedir=None, params=None):
    '\n    @param basedir: basedir/files, basedir/templates are the places where templates / static files\n    are looked up\n    @param params: configurations dictionary (this will be accessible in the templates)\n    '
    self.log = logging.getLogger('resource_management')
    self.formatter = ConfigurationFormatter()
    self.reset(basedir, params)
