def getServiceConfigurationValidators(self):
    parentValidators = super(HDP22StackAdvisor, self).getServiceConfigurationValidators()
    childValidators = {'HDFS': {'hdfs-site': self.validateHDFSConfigurations, 'hadoop-env': self.validateHDFSConfigurationsEnv, }, 'HIVE': {'hiveserver2-site': self.validateHiveServer2Configurations, 'hive-site': self.validateHiveConfigurations, }, 'HBASE': {'hbase-site': self.validateHBASEConfigurations, }, 'MAPREDUCE2': {'mapred-site': self.validateMapReduce2Configurations, }, 'TEZ': {'tez-site': self.validateTezConfigurations, }, }
    parentValidators.update(childValidators)
    return parentValidators
