def getServiceConfigurationValidators(self):
    parentValidators = super(HDP22StackAdvisor, self).getServiceConfigurationValidators()
    childValidators = {'HDFS': {'hdfs-site': self.validateHDFSConfigurations, }, 'MAPREDUCE2': {'mapred-site': self.validateMapReduce2Configurations, }, 'AMS': {'ams-hbase-site': self.validateAmsHbaseSiteConfigurations, 'ams-hbase-env': self.validateAmsHbaseEnvConfigurations, }, 'TEZ': {'tez-site': self.validateTezConfigurations, }, }
    parentValidators.update(childValidators)
    return parentValidators
