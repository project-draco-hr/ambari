def getServiceConfigurationValidators(self):
    parentValidators = super(HDP22StackAdvisor, self).getServiceConfigurationValidators()
    childValidators = {'HDFS': {'hdfs-site': self.validateHDFSConfigurations, 'hadoop-env': self.validateHDFSConfigurationsEnv, }, 'HIVE': {'hiveserver2-site': self.validateHIVEConfigurations, }, 'HBASE': {'hbase-site': self.validateHBASEConfigurations, }, 'MAPREDUCE2': {'mapred-site': self.validateMapReduce2Configurations, }, 'AMS': {'ams-hbase-site': self.validateAmsHbaseSiteConfigurations, 'ams-hbase-env': self.validateAmsHbaseEnvConfigurations, 'ams-site': self.validateAmsSiteConfigurations, }, 'TEZ': {'tez-site': self.validateTezConfigurations, }, }
    parentValidators.update(childValidators)
    return parentValidators
