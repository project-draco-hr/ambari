def print_usage():
    '\n  Usage instructions\n  :return:\n  '
    print (((('Usage: python BackupRestore.py <processType> [zip-folder-path|zip-file-path]\n\n' + '    processType - backup : backs up the filesystem state of the Ambari server into a zip file\n') + '    processType - restore : restores the filesystem state of the Ambari server\n') + '    [zip-folder-path] used with backup specifies the path of the folder where the zip file to be created\n') + '    [zip-folder-path] used with restore specifies the path of the Ambari folder where the zip file to restore from is located\n')
