def test_stop_secured(self):
    self.executeScript('2.0.6/services/HBASE/package/scripts/hbase_regionserver.py', classname='HbaseRegionServer', command='stop', config_file='secured.json')
    self.assertResourceCalled('Execute', '/usr/lib/hbase/bin/hbase-daemon.sh --config /etc/hbase/conf stop regionserver', user='hbase', on_timeout='ls /var/run/hbase/hbase-hbase-regionserver.pid >/dev/null 2>&1 && ps -p `cat /var/run/hbase/hbase-hbase-regionserver.pid` >/dev/null 2>&1 && kill -9 `cat /var/run/hbase/hbase-hbase-regionserver.pid`', timeout=30)
    self.assertResourceCalled('Execute', 'rm -f /var/run/hbase/hbase-hbase-regionserver.pid')
    self.assertNoMoreResources()
