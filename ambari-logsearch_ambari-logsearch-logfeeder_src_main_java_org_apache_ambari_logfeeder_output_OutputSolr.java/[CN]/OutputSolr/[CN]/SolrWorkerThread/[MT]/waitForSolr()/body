{
  while (!isDrain()) {
    try {
      LOG.warn("Solr is down. Going to sleep for " + RETRY_INTERVAL + " seconds. "+ "output="+ getShortDescription());
      Thread.sleep(RETRY_INTERVAL * 1000);
    }
 catch (    Throwable t) {
      break;
    }
    if (isDrain()) {
      break;
    }
    try {
      SolrPingResponse pingResponse=solrClient.ping();
      if (pingResponse.getStatus() == 0) {
        LOG.info("Solr seems to be up now. Resuming... output=" + getShortDescription());
        break;
      }
    }
 catch (    Throwable t) {
    }
  }
}
