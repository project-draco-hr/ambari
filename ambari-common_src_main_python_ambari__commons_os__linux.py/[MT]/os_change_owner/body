def os_change_owner(filePath, user, recursive):
    if recursive:
        params = ' -R '
    else:
        params = ''
    command = NR_CHOWN_CMD.format(params, user, filePath)
    (retcode, out, err) = os_run_os_command(command)
    if (retcode != 0):
        print_warning_msg(WARN_MSG.format(command, filePath, err))
