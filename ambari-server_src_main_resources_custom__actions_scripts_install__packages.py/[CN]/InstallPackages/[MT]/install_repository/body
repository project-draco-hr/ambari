def install_repository(self, url_info, repository_version):
    template = ('repo_suse_rhel.j2' if (OSCheck.is_redhat_family() or OSCheck.is_suse_family()) else 'repo_ubuntu.j2')
    repo = {'repoName': '{0}-{1}'.format(url_info['name'], repository_version), }
    if (not ('baseUrl' in url_info)):
        repo['baseurl'] = None
    else:
        repo['baseurl'] = url_info['baseUrl']
    if (not ('mirrorsList' in url_info)):
        repo['mirrorsList'] = None
    else:
        repo['mirrorsList'] = url_info['mirrorsList']
    ubuntu_components = ([url_info['repositoryId']] + self.UBUNTU_REPO_COMPONENTS_POSTFIX)
    Repository(repo['repoName'], action='create', base_url=repo['baseurl'], mirror_list=repo['mirrorsList'], repo_file_name=repo['repoName'], repo_template=template, components=ubuntu_components)
    return repo['repoName']
