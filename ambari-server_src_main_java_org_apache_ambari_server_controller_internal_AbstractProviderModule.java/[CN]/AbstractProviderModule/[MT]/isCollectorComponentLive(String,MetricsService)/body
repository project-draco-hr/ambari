{
  final String collectorHostName=getCollectorHostName(clusterName,service);
  if (service.equals(GANGLIA)) {
    return isHostComponentLive(clusterName,collectorHostName,"GANGLIA",Role.GANGLIA_SERVER.name());
  }
 else   if (service.equals(TIMELINE_METRICS)) {
    for (    String hostname : metricServerHosts) {
      if (isHostComponentLive(clusterName,hostname,"AMBARI_METRICS",Role.METRICS_COLLECTOR.name())) {
        return true;
      }
    }
  }
  return false;
}
