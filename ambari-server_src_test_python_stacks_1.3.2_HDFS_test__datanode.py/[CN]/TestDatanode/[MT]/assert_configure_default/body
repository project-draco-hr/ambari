def assert_configure_default(self):
    self.assertResourceCalled('Directory', '/var/lib/hadoop-hdfs', owner='hdfs', group='hadoop', mode=489, recursive=True)
    self.assertResourceCalled('Directory', '/hadoop/hdfs', mode=493, recursive=True)
    self.assertResourceCalled('Directory', '/hadoop/hdfs/data', owner='hdfs', group='hadoop', mode=488, recursive=False)
