{
  if (commaSepratedString != null && !commaSepratedString.isEmpty()) {
    String[] arrayOfSepratedString=commaSepratedString.split(",");
    String filterQuery;
    if ("OR".equals(condition))     filterQuery=solrUtil.orList(operator + field,arrayOfSepratedString,"");
 else     filterQuery=solrUtil.andList(operator + field,arrayOfSepratedString,"");
    solrQuery.addFilterQuery(filterQuery);
    logger.debug("Filter added :- " + filterQuery);
  }
}
