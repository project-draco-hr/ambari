def test_stop_secured(self):
    self.executeScript('2.0.6/services/HIVE/package/scripts/mysql_server.py', classname='MysqlServer', command='stop', config_file='secured.json')
    self.assertResourceCalled('Execute', "sed -i 's|^bind-address[ \t]*=.*|bind-address = 0.0.0.0|' /etc/my.cnf")
    self.assertResourceCalled('Execute', 'service mysql stop', logoutput=True, not_if='service mysql status | grep running')
    self.assertNoMoreResources()
