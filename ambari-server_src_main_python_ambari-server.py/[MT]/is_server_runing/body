def is_server_runing():
    if os.path.exists(((PID_DIR + os.sep) + PID_NAME)):
        f = open(((PID_DIR + os.sep) + PID_NAME), 'r')
        pid = int(f.readline())
        f.close()
        (retcode, out, err) = run_os_command(('ps -p ' + str(pid)))
        if (retcode == 0):
            return (True, pid)
        else:
            return (False, None)
    else:
        return (False, None)
