def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('action', help='action to perform with ambari server')
    parser.add_argument('-d', '--postgredbname', default='postgres', help='Database name in postgresql')
    parser.add_argument('-u', '--postgreuser', default='postgres', help='User in postgresql to run init scripts')
    parser.add_argument('-f', '--init-script-file', default='setup_db.sql', help='File with setup script')
    args = parser.parse_args()
    action = args.action
    if (action == SETUP_ACTION):
        setup(args)
    elif (action == START_ACTION):
        start(args)
    elif (action == STOP_ACTION):
        stop(args)
    else:
        print 'Incorrect action'
        sys.exit(1)
