def get_validated_string_input(prompt, default, pattern, description, is_pass):
    input = ''
    while (not input):
        if SILENT:
            print prompt
            input = default
        elif is_pass:
            input = getpass.getpass(prompt)
        else:
            input = raw_input(prompt)
        if (not input.strip()):
            input = default
            break
        elif ((not (pattern == None)) and (not re.search(pattern, input.strip()))):
            print description
            input = ''
    return input
