def setup_remote_db(args):
    (retcode, out, err) = execute_remote_script(args, DATABASE_INIT_SCRIPTS[DATABASE_INDEX])
    if (retcode != 0):
        if (retcode == (-1)):
            print_warning_msg(((('Cannot find ' + DATABASE_NAMES[DATABASE_INDEX]) + ' client in the path, for setup please run the following DDL against the DB: ') + DATABASE_INIT_SCRIPTS[DATABASE_INDEX]), True)
            return retcode
        print err
        print_error_msg('Database bootstrap failed. Please, provide correct connection properties.')
        return retcode
    pass
    return 0
