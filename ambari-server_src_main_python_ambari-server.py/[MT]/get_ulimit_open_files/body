def get_ulimit_open_files():
    properties = get_ambari_properties()
    if (properties == (-1)):
        print 'Error reading ambari properties'
        return None
    open_files = int(properties[ULIMIT_OPEN_FILES_KEY])
    if (open_files > 0):
        return open_files
    else:
        return ULIMIT_OPEN_FILES_DEFAULT
