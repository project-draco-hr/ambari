def schedule_definition(self, definition):
    '\n    Schedule a definition (callable). Scheduled jobs are given the UUID\n    as their name so that they can be identified later on.\n    '
    job = None
    if self.__in_minutes:
        job = self.__scheduler.add_interval_job(self.__make_function(definition), minutes=definition.interval())
    else:
        job = self.__scheduler.add_interval_job(self.__make_function(definition), seconds=definition.interval())
    if (job is not None):
        job.name = definition.definition_uuid()
    logger.info('Scheduling {0} with UUID {1}'.format(definition.definition_name(), definition.definition_uuid()))
