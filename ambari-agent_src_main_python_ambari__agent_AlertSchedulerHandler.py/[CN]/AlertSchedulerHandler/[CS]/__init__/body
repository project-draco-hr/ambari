def __init__(self, filename, in_minutes=True):
    self.filename = filename
    config = {'threadpool.core_threads': 3, 'coalesce': True, 'standalone': False, }
    self.scheduler = Scheduler(config)
    alert_callables = self.__load_alerts()
    for _callable in alert_callables:
        if in_minutes:
            self.scheduler.add_interval_job(self.__make_function(_callable), minutes=_callable.interval())
        else:
            self.scheduler.add_interval_job(self.__make_function(_callable), seconds=_callable.interval())
